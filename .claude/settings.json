{
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Bash(npm run lint)"
    ],
    "deny": [
      "Read(./.env)"
    ],
    "ask": []
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start-tts.sh"
          }
        ]
      }
    ]
  },
  "$schema": "https://json.schemastore.org/claude-code-settings.json"
}