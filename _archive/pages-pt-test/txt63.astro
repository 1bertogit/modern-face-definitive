interface Props {
  title?: string;
}

const { title = "Modern Facial Surgery - Contact Details" } = Astro.props;
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <title>{title}</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com" rel="preconnect"/>
  <link crossorigin href="https://fonts.gstatic.com" rel="preconnect"/>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&amp;family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&amp;display=swap" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet"/>
</head>

<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-white antialiased min-h-screen flex flex-col">
  <header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-border-dark px-6 lg:px-10 py-4 bg-background-dark/95 backdrop-blur-sm sticky top-0 z-50">
<div class="flex items-center gap-4 text-white">
<div class="size-8 text-primary">
<span class="material-symbols-outlined text-3xl">medical_services</span>
</div>
<h2 class="text-white text-lg font-bold leading-tight tracking-[-0.015em] hidden sm:block font-serif">Modern Facial Surgery</h2>
</div>
<div class="flex items-center gap-4">
<button class="text-white/70 hover:text-primary text-sm font-medium transition-colors hidden sm:block">
                Save &amp; Exit
            </button>
<div class="size-8 rounded-full bg-surface-dark border border-border-dark flex items-center justify-center text-primary">
<span class="material-symbols-outlined text-sm">person</span>
</div>
</div>
</header>

<main class="flex-1 flex flex-col items-center justify-start py-10 px-4 sm:px-6">
<div class="w-full max-w-[800px] flex flex-col gap-10">

<div class="flex flex-col gap-3 animate-fade-in-down">
<div class="flex gap-6 justify-between items-end">
<p class="text-white/80 text-sm font-medium leading-normal tracking-wide uppercase">Application Step 1 of 5</p>
<span class="text-primary text-xs font-bold">20% Completed</span>
</div>
<div class="h-1 w-full rounded-full bg-surface-dark overflow-hidden">
<div class="h-full rounded-full bg-primary shadow-[0_0_10px_rgba(236,182,19,0.5)]" style="width: 20%;"></div>
</div>
</div>

<div class="flex flex-col gap-8">

<div class="pb-2 border-b border-border-dark/30">
<h1 class="text-white font-serif text-4xl md:text-5xl font-medium leading-tight mb-2">Contact Details</h1>
<p class="text-white/60 text-lg font-light font-display">Please provide your primary contact information for official correspondence.</p>
</div>

<div class="flex flex-col gap-8 md:gap-10 pt-4">

<div class="group">
<label class="block text-white text-lg font-medium leading-normal mb-3" for="full-name">
                            What is your full name?
                        </label>
<div class="relative">
<input class="form-input block w-full rounded-lg bg-surface-dark border border-border-dark text-white placeholder:text-white/30 focus:border-primary focus:ring-1 focus:ring-primary/50 h-16 px-5 text-lg" id="full-name" placeholder="e.g. Dr. Jonathan Harker" type="text"/>
<div class="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none text-white/20 group-focus-within:text-primary transition-colors">
<span class="material-symbols-outlined">badge</span>
</div>
</div>
</div>

<div class="group">
<label class="block text-white text-lg font-medium leading-normal mb-3" for="email">
                            What is your professional email address?
                        </label>
<div class="relative">
<input class="form-input block w-full rounded-lg bg-surface-dark border border-border-dark text-white placeholder:text-white/30 focus:border-primary focus:ring-1 focus:ring-primary/50 h-16 px-5 text-lg" id="email" placeholder="name@institution.org" type="email"/>
<div class="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none text-white/20 group-focus-within:text-primary transition-colors">
<span class="material-symbols-outlined">mail</span>
</div>
</div>
<p class="text-white/40 text-sm mt-2 font-light">We will use this for all program-related notifications.</p>
</div>

<div class="group">
<label class="block text-white text-lg font-medium leading-normal mb-3" for="phone">
                            Phone number (for interview scheduling)
                        </label>
<div class="flex gap-3">
<div class="w-32 relative">
<select class="form-select block w-full rounded-lg bg-surface-dark border border-border-dark text-white focus:border-primary focus:ring-1 focus:ring-primary/50 h-16 px-4 text-base appearance-none cursor-pointer">
<option>US +1</option>
<option>UK +44</option>
<option>DE +49</option>
<option>FR +33</option>
<option>JP +81</option>
</select>
<div class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none text-white/50">
<span class="material-symbols-outlined">expand_more</span>
</div>
</div>
<div class="relative flex-1">
<input class="form-input block w-full rounded-lg bg-surface-dark border border-border-dark text-white placeholder:text-white/30 focus:border-primary focus:ring-1 focus:ring-primary/50 h-16 px-5 text-lg" id="phone" placeholder="555-0123" type="tel"/>
</div>
</div>
</div>

<div class="group">
<label class="block text-white text-lg font-medium leading-normal mb-3" for="institution">
                            Current Medical Institution or Private Practice
                        </label>
<div class="relative">
<input class="form-input block w-full rounded-lg bg-surface-dark border border-border-dark text-white placeholder:text-white/30 focus:border-primary focus:ring-1 focus:ring-primary/50 h-16 px-5 text-lg" id="institution" placeholder="e.g. St. Thomas' Hospital" type="text"/>
<div class="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none text-white/20 group-focus-within:text-primary transition-colors">
<span class="material-symbols-outlined">domain</span>
</div>
</div>
</div>
</div>
</div>

<div class="flex items-center justify-between pt-10 border-t border-border-dark mt-4">
<button class="flex items-center justify-center gap-2 h-12 px-8 rounded-lg border border-white/20 bg-transparent text-white text-sm font-bold tracking-wide uppercase hover:bg-white/5 transition-all group">
<span class="material-symbols-outlined text-lg group-hover:-translate-x-1 transition-transform">arrow_back</span>
<span>Back</span>
</button>
<button class="flex items-center justify-center gap-2 h-12 px-10 rounded-lg bg-primary text-background-dark text-sm font-bold tracking-wide uppercase hover:bg-primary/90 transition-all shadow-[0_0_15px_rgba(236,182,19,0.3)] hover:shadow-[0_0_20px_rgba(236,182,19,0.5)] group">
<span>Next Step</span>
<span class="material-symbols-outlined text-lg group-hover:translate-x-1 transition-transform">arrow_forward</span>
</button>
</div>
</div>
</main>
</body>
</html>

<style is:global>
  /* Tailwind Config via CSS Variables */
  :root {
    --primary: #ecb613;
    --background-light: #f8f8f6;
    --background-dark: #221d10;
    --surface-dark: #2c2616;
    --border-dark: #483f23;
  }
/* Custom scrollbar for a cleaner look */
        ::-webkit-scrollbar {
            width: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #221d10; 
        }
        ::-webkit-scrollbar-thumb {
            background: #483f23; 
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #ecb613; 
        }
        
        /* Smooth focus transitions */
        .form-input {
            transition: all 0.3s ease;
        }

  /* Custom Utilities */
  .text-balance {
    text-wrap: balance;
  }
  
  .grayscale-hover {
    filter: grayscale(80%);
    transition: filter 0.5s ease;
  }
  
  .grayscale-hover:hover {
    filter: grayscale(0%);
  }
  
  .thin-border {
    border-width: 0.5px;
  }
  
  .thin-border-t {
    border-top-width: 0.5px;
  }
  
  .thin-border-b {
    border-bottom-width: 0.5px;
  }
  
  /* Grain Background */
  .bg-grain {
    background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noiseFilter%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noiseFilter)%22 opacity=%220.05%22/%3E%3C/svg%3E');
  }
</style>

