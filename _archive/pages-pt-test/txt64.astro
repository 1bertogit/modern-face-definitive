---
// Modern Facial Surgery - Contact Form
// Convertido automaticamente de HTML para Astro
// Data: 2026-01-02 20:32

interface Props {
  title?: string;
}

const { title = "Modern Facial Surgery - Contact Form" } = Astro.props;
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <title>{title}</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com" rel="preconnect"/>
  <link crossorigin href="https://fonts.gstatic.com" rel="preconnect"/>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;family=Playfair+Display:wght@400;600;700&amp;display=swap" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet"/>
</head>

<body class="bg-background-light dark:bg-background-dark min-h-screen flex flex-col font-display antialiased text-slate-900 dark:text-white transition-colors duration-200">
  <header class="w-full bg-ivory text-deep-petrol px-6 py-4 md:px-10 lg:px-40 border-b border-stone-200">
<div class="max-w-5xl mx-auto flex items-center justify-between">
<div class="flex items-center gap-3">
<div class="font-serif font-bold text-xl tracking-tight leading-none">MFI</div>
<div class="h-5 w-px bg-deep-petrol/20"></div>
<span class="text-xs font-bold uppercase tracking-[0.15em] opacity-80 pt-0.5">Modern Face Institute</span>
</div>
</div>
</header>
<div class="w-full border-b border-gray-200 dark:border-[#483f23] px-6 py-4 md:px-10 lg:px-40 bg-white/50 dark:bg-[#221d10]/50 backdrop-blur-sm">
<div class="flex items-center justify-between max-w-5xl mx-auto">
<div class="flex items-center gap-3">
<div class="text-primary size-6">
<span class="material-symbols-outlined text-2xl">medical_services</span>
</div>
<h2 class="text-sm md:text-base font-bold tracking-tight text-slate-900 dark:text-white uppercase">Advanced Training Program</h2>
</div>
<div class="hidden md:flex items-center bg-gray-100 dark:bg-[#332d19] rounded-lg px-3 py-1.5 border border-transparent dark:border-[#483f23]">
<span class="text-xs font-bold uppercase tracking-wider text-gray-600 dark:text-primary">Bloco 1 de 5</span>
</div>
</div>
</div>
<main class="flex-grow flex flex-col items-center justify-start py-8 md:py-12 px-4 md:px-0">
<div class="w-full max-w-[600px] flex flex-col gap-8 md:gap-10">
<div class="w-full px-4">
<div class="flex flex-col gap-2">
<span class="text-xs font-bold uppercase tracking-[0.2em] text-gray-500 dark:text-[#c9bb92] font-display">
                    Bloco 1 de 5
                </span>
<div class="h-1 w-full bg-gray-200 dark:bg-[#332d19] rounded-full overflow-hidden">
<div class="h-full bg-primary rounded-full transition-all duration-300" style="width: 20%"></div>
</div>
</div>
</div>
<div class="px-4 flex flex-col gap-3">
<h1 class="font-serif text-4xl md:text-5xl font-medium text-slate-900 dark:text-white leading-tight">
                Dados de Contato
            </h1>
<p class="text-gray-600 dark:text-[#c9bb92] text-lg font-light leading-relaxed">
                Inicie sua aplicação para o programa avançado preenchendo suas informações principais.
            </p>
</div>
<div class="flex flex-col gap-6 px-4">
<div class="flex flex-col gap-2 group">
<label class="text-sm font-medium text-gray-700 dark:text-gray-200 group-focus-within:text-primary transition-colors" for="name">
                    Qual seu nome completo?
                </label>
<div class="relative">
<input class="peer w-full h-14 bg-white dark:bg-[#2d2616] border border-gray-300 dark:border-[#675a32] rounded-lg px-4 text-base text-slate-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-[#6e6347] focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all duration-200" id="name" placeholder="Ex: Dr. Ana Silva" type="text"/>
<div class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 dark:text-[#675a32] opacity-0 peer-focus:opacity-100 transition-opacity">
<span class="material-symbols-outlined text-xl">person</span>
</div>
</div>
</div>
<div class="flex flex-col gap-2 group">
<label class="text-sm font-medium text-gray-700 dark:text-gray-200 group-focus-within:text-primary transition-colors" for="email">
                    Qual seu email profissional?
                </label>
<div class="relative">
<input class="peer w-full h-14 bg-white dark:bg-[#2d2616] border border-gray-300 dark:border-[#675a32] rounded-lg px-4 text-base text-slate-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-[#6e6347] focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all duration-200" id="email" placeholder="nome@clinica.com" type="email"/>
<div class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 dark:text-[#675a32] opacity-0 peer-focus:opacity-100 transition-opacity">
<span class="material-symbols-outlined text-xl">mail</span>
</div>
</div>
</div>
<div class="flex flex-col gap-2 group">
<label class="text-sm font-medium text-gray-700 dark:text-gray-200 group-focus-within:text-primary transition-colors" for="phone">
                    Telefone / WhatsApp
                </label>
<div class="relative">
<input class="peer w-full h-14 bg-white dark:bg-[#2d2616] border border-gray-300 dark:border-[#675a32] rounded-lg px-4 text-base text-slate-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-[#6e6347] focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all duration-200" id="phone" placeholder="(11) 99999-9999" type="tel"/>
<div class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 dark:text-[#675a32] opacity-0 peer-focus:opacity-100 transition-opacity">
<span class="material-symbols-outlined text-xl">smartphone</span>
</div>
</div>
<p class="text-xs text-gray-500 dark:text-[#6e6347] mt-1">
                    Utilizaremos este número para contato sobre o andamento da sua aplicação.
                </p>
</div>
</div>
<div class="flex items-center justify-between px-4 pt-8 md:pt-12 pb-10">
<button class="group flex items-center gap-2 px-6 h-12 rounded-lg border border-gray-300 dark:border-[#675a32] text-gray-600 dark:text-[#c9bb92] hover:bg-gray-100 dark:hover:bg-[#332d19] hover:text-slate-900 dark:hover:text-white transition-all font-medium text-sm" type="button">
<span class="material-symbols-outlined text-lg group-hover:-translate-x-0.5 transition-transform">arrow_back</span>
                Voltar
            </button>
<button class="group flex items-center gap-2 px-8 h-12 bg-primary hover:bg-[#d9a60e] text-background-dark rounded-lg font-bold text-sm shadow-lg shadow-primary/20 hover:shadow-primary/40 transition-all" type="button">
                Próximo
                <span class="material-symbols-outlined text-lg group-hover:translate-x-0.5 transition-transform">arrow_forward</span>
</button>
</div>
</div>
</main>
<footer class="w-full bg-deep-petrol text-warm-gray px-6 py-8 md:px-10 lg:px-40 mt-auto border-t border-white/5">
<div class="max-w-5xl mx-auto flex flex-col md:flex-row items-center justify-between gap-6">
<div class="text-xs font-display tracking-wide opacity-90">
            © 2024 Modern Face Institute. All rights reserved.
        </div>
<div class="flex items-center gap-6 md:gap-8">
<a class="text-xs font-display uppercase tracking-widest hover:text-white transition-colors" href="#">Privacy Policy</a>
<a class="text-xs font-display uppercase tracking-widest hover:text-white transition-colors" href="#">Terms of Use</a>
<a class="text-xs font-display uppercase tracking-widest hover:text-white transition-colors" href="#">Contact</a>
</div>
</div>
</footer>
<div class="md:hidden fixed bottom-0 left-0 w-full bg-white dark:bg-[#221d10] border-t border-gray-200 dark:border-[#483f23] p-4 flex justify-center z-30">
<span class="text-xs font-bold uppercase tracking-wider text-gray-600 dark:text-primary">Bloco 1 de 5</span>
</div>
</body>
</html>

<style is:global>
  /* Tailwind Config via CSS Variables */
  :root {
    --primary: #ecb613;
    --background-light: #f8f8f6;
    --background-dark: #221d10;
    --surface-dark: #2d2616;
    --border-gold: #675a32;
    --deep-petrol: #123f45;
    --ivory: #f9f8f3;
    --warm-gray: #cecaca;
  }

  /* Custom Utilities */
  .text-balance {
    text-wrap: balance;
  }
  
  .grayscale-hover {
    filter: grayscale(80%);
    transition: filter 0.5s ease;
  }
  
  .grayscale-hover:hover {
    filter: grayscale(0%);
  }
  
  .thin-border {
    border-width: 0.5px;
  }
  
  .thin-border-t {
    border-top-width: 0.5px;
  }
  
  .thin-border-b {
    border-bottom-width: 0.5px;
  }
  
  /* Grain Background */
  .bg-grain {
    background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noiseFilter%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noiseFilter)%22 opacity=%220.05%22/%3E%3C/svg%3E');
  }
</style>

<script>

  // Tailwind CDN for development (remove in production and use proper Tailwind build)
  const tailwindScript = document.createElement('script');
  tailwindScript.src = 'https://cdn.tailwindcss.com?plugins=forms,container-queries';
  document.head.appendChild(tailwindScript);
  
  tailwindScript.onload = () => {
    // @ts-ignore
    tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#ecb613",
                        "background-light": "#f8f8f6",
                        "background-dark": "#221d10",
                        "surface-dark": "#2d2616", 
                        "border-gold": "#675a32",
                        "deep-petrol": "#123f45", // Custom Deep Petrol
                        "ivory": "#f9f8f3",       // Custom Ivory
                        "warm-gray": "#cecaca",   // Custom Warm Gray
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"],
                        "serif": ["Playfair Display", "serif"],
                    },
                    borderRadius: { "DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px" },
                },
            },
        }
  };
</script>
