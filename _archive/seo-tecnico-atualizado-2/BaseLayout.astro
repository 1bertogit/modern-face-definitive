---
import '../styles/global.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import SEO from '../components/seo/SEO.astro';
import SchemaOrganization from '../components/seo/SchemaOrganization.astro';
import PostHog from '../components/posthog.astro';
import {
  getLocaleFromUrl,
  htmlLang,
  getAlternateUrls,
  type Locale
} from '../lib/i18n';

interface Props {
  title: string;
  description: string;
  image?: string;
  noIndex?: boolean;
  schema?: object;
  lang?: Locale;
  keywords?: string[];
  includeOrgSchema?: boolean;
}

const { 
  title, 
  description, 
  image = '/images/og-default.webp',
  noIndex = false,
  schema,
  lang,
  keywords = [],
  includeOrgSchema = false
} = Astro.props;

// Auto-detect locale from URL if not provided
const locale = lang || getLocaleFromUrl(Astro.url);
const htmlLangAttr = htmlLang[locale];

// Site title variations by locale
// UPDATED: Using new branding
const siteTitles: Record<Locale, string> = {
  'en': 'Dr. Robério Brandão | Modern Face Institute',
  'pt-BR': 'Dr. Robério Brandão | Modern Face Institute',
  'es': 'Dr. Robério Brandão | Modern Face Institute'
};

const homeTitles: Record<Locale, string> = {
  'en': 'Home',
  'pt-BR': 'Início',
  'es': 'Inicio'
};

const skipLinkText: Record<Locale, string> = {
  'en': 'Skip to main content',
  'pt-BR': 'Ir para o conteúdo principal',
  'es': 'Ir al contenido principal'
};

const siteTitle = siteTitles[locale];
const homeTitle = homeTitles[locale];
const fullTitle = title === homeTitle || title === 'Início' || title === 'Home' || title === 'Inicio' 
  ? siteTitle 
  : `${title} | ${siteTitle}`;

// Generate alternate URLs for hreflang
// UPDATED: New domain
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://drroberiobrandao.com';
const alternates = getAlternateUrls(Astro.url.pathname, siteUrl);

// Check if this is homepage (should include Organization schema)
// UPDATED: EN is now root, PT uses /pt, ES uses /es
const isHomepage = Astro.url.pathname === '/' || Astro.url.pathname === '/pt' || Astro.url.pathname === '/pt/' || Astro.url.pathname === '/es' || Astro.url.pathname === '/es/';
---

<!doctype html>
<html lang={htmlLangAttr}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Analytics -->
    <PostHog />
    
    <SEO 
      title={fullTitle}
      description={description}
      image={image}
      noIndex={noIndex}
      lang={locale}
      alternates={alternates}
      keywords={keywords}
    />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Dr. Robério Brandão RSS" href="/rss.xml" />

    <!-- Page-specific schema -->
    {schema && (
      <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    )}

    <!-- Organization schema on homepage or when explicitly requested -->
    {(isHomepage || includeOrgSchema) && (
      <SchemaOrganization />
    )}
  </head>
  <body class="min-h-screen flex flex-col bg-background text-foreground">
    <!-- Skip Link for Accessibility -->
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-white focus:rounded-md"
    >
      {skipLinkText[locale]}
    </a>

    <Header lang={locale} />
    
    <main id="main-content" class="flex-1">
      <slot />
    </main>
    
    <Footer lang={locale} />
  </body>
</html>
