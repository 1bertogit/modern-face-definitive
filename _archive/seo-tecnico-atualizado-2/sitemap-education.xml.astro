---
// sitemap-education.xml - Training Programs (English - Default)
const siteUrl = 'https://drroberiobrandao.com';
const lastmod = new Date().toISOString().split('T')[0];

const educationPages = [
  // Index
  { url: '/education', priority: 0.9, changefreq: 'weekly' },
  
  // Core Programs
  { url: '/education/endomidface', priority: 0.9, changefreq: 'weekly' },
  { url: '/education/deep-neck', priority: 0.9, changefreq: 'weekly' },
  { url: '/education/browlift', priority: 0.8, changefreq: 'weekly' },
  { url: '/education/combo-legacy', priority: 0.9, changefreq: 'weekly' },
  
  // Program details - Endomidface
  { url: '/education/endomidface/program', priority: 0.8, changefreq: 'monthly' },
  { url: '/education/endomidface/curriculum', priority: 0.7, changefreq: 'monthly' },
  { url: '/education/endomidface/investment', priority: 0.7, changefreq: 'weekly' },
  { url: '/education/endomidface/testimonials', priority: 0.6, changefreq: 'monthly' },
  
  // Program details - Deep Neck
  { url: '/education/deep-neck/program', priority: 0.8, changefreq: 'monthly' },
  { url: '/education/deep-neck/curriculum', priority: 0.7, changefreq: 'monthly' },
  { url: '/education/deep-neck/investment', priority: 0.7, changefreq: 'weekly' },
  
  // Program details - Combo Legacy
  { url: '/education/combo-legacy/program', priority: 0.8, changefreq: 'monthly' },
  { url: '/education/combo-legacy/curriculum', priority: 0.7, changefreq: 'monthly' },
  { url: '/education/combo-legacy/mentorship', priority: 0.7, changefreq: 'monthly' },
  { url: '/education/combo-legacy/investment', priority: 0.7, changefreq: 'weekly' },
  
  // Training
  { url: '/education/advanced-training', priority: 0.7, changefreq: 'monthly' },
  { url: '/education/satellite-courses', priority: 0.6, changefreq: 'monthly' },
  { url: '/education/mentorship', priority: 0.7, changefreq: 'monthly' },
  { url: '/education/certification', priority: 0.6, changefreq: 'monthly' },
  
  // Resources
  { url: '/education/resources', priority: 0.6, changefreq: 'monthly' },
  { url: '/education/library', priority: 0.6, changefreq: 'weekly' },
  { url: '/education/videos', priority: 0.6, changefreq: 'weekly' },
];
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {educationPages.map((page) => (
    <url>
      <loc>{siteUrl}{page.url}</loc>
      <lastmod>{lastmod}</lastmod>
      <changefreq>{page.changefreq}</changefreq>
      <priority>{page.priority}</priority>
      <xhtml:link rel="alternate" hreflang="en" href={`${siteUrl}${page.url}`} />
      <xhtml:link rel="alternate" hreflang="x-default" href={`${siteUrl}${page.url}`} />
    </url>
  ))}
</urlset>
