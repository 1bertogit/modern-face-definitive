---
import BaseLayout from '@layouts/BaseLayout.astro';

const timeline = [
  {
    periodo: '2005-2010',
    titulo: 'Los Primeros Años',
    eventos: [
      'Inicio de dedicación exclusiva a cirugía facial',
      'Formación tradicional en ritidoplastia',
      'Primeras experiencias con técnicas endoscópicas',
      'Observación de limitaciones de abordajes convencionales',
    ],
  },
  {
    periodo: '2011-2015',
    titulo: 'El Cuestionamiento',
    eventos: [
      'Cuestionamiento de necesidad del endoscopio',
      'Estudios profundos de anatomía facial',
      'Primeros intentos de acceso por visión directa',
      'Desarrollo del concepto de vector vertical',
    ],
  },
  {
    periodo: '2016-2018',
    titulo: 'La Transición',
    eventos: [
      'Abandono progresivo del endoscopio',
      'Refinamiento de técnica de visión directa',
      'Desarrollo del Deep Neck sin resección glandular',
      'Primeros resultados consistentes documentados',
    ],
  },
  {
    periodo: '2019-2021',
    titulo: 'La Sistematización',
    eventos: [
      "Nacimiento del término 'Endomidface por Visión Directa'",
      'Creación del sistema de evaluación SPE-M',
      'Inicio de documentación sistemática de casos',
      'Primeras presentaciones en congresos',
    ],
  },
  {
    periodo: '2022-2023',
    titulo: 'La Face Moderna®',
    eventos: [
      'Consolidación de la filosofía Face Moderna',
      'Integración de técnicas (Midface, Deep Neck, Browlift)',
      'Inicio de enseñanza formal a otros cirujanos',
      'Primeras clases de mentoría',
    ],
  },
  {
    periodo: '2024+',
    titulo: 'El Instituto',
    eventos: [
      'Fundación del Modern Face Institute',
      'Estructuración de programas de formación',
      'Expansión para alcance internacional',
      'Desarrollo de tecnología clínica (FaceOS)',
    ],
  },
];
---

<BaseLayout
  title="Línea del Tiempo | La Evolución de la Face Moderna®"
  description="La trayectoria de casi 20 años que llevó al desarrollo de la metodología Face Moderna®."
  lang="es"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/es" class="hover:text-white">Inicio</a></li><li><span>/</span></li><li>
            <a href="/es/sobre" class="hover:text-white">Sobre</a>
          </li><li><span>/</span></li><li class="text-white">Línea del Tiempo</li>
        </ol>
      </nav>
      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
        Nuestra Historia
      </p>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Línea del Tiempo
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Casi 20 años de evolución, cuestionamiento y refinamiento que resultaron en la metodología
        Face Moderna®
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="space-y-12">
        {
          timeline.map((periodo) => (
            <div class="relative">
              <div class="flex flex-col md:flex-row gap-6">
                <div class="flex-shrink-0 md:w-24">
                  <span class="inline-block px-4 py-2 bg-accent-600 text-white text-sm font-medium">
                    {periodo.periodo}
                  </span>
                </div>
                <div class="flex-shrink-0 w-px bg-accent-600/30 self-stretch hidden md:block" />
                <div class="flex-1 bg-white p-6 border border-gray-100">
                  <h3 class="text-xl font-serif text-primary-900 mb-4">{periodo.titulo}</h3>
                  <ul class="space-y-2">
                    {periodo.eventos.map((evento) => (
                      <li class="flex items-start gap-2 text-warmGray text-sm">
                        <span class="material-symbols-outlined text-accent-600 text-sm flex-shrink-0 mt-0.5">
                          arrow_right
                        </span>
                        {evento}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-8">La Jornada Continúa</h2>
      <p class="text-primary-300 leading-relaxed">
        Esta línea del tiempo no tiene fin. Continuamos cuestionando, refinando y evolucionando.
      </p>
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/es/sobre/casuistica" class="text-sm text-accent-600">← Casuística</a>
      <a href="/es/sobre/principios-eticos" class="text-sm text-accent-600">Principios Éticos →</a>
    </div>
  </section>
</BaseLayout>
