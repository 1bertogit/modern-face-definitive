---
import BaseLayout from '@layouts/BaseLayout.astro';

const etapas = [
  {
    num: '01',
    titulo: 'Evaluación Inicial',
    desc: 'Anamnesis, expectativas y contraindicaciones',
    href: '/es/planificacion-quirurgica/evaluacion-inicial',
  },
  {
    num: '02',
    titulo: 'Sistema SPE-M',
    desc: 'Evaluación estandarizada en 4 dominios',
    href: '/es/planificacion-quirurgica/sistema-spe-m',
  },
  {
    num: '03',
    titulo: 'Definición de Vectores',
    desc: 'Dirección y puntos de fijación',
    href: '/es/planificacion-quirurgica/definicion-de-vectores',
  },
  {
    num: '04',
    titulo: 'Fotografía Estandarizada',
    desc: 'Documentación visual completa',
    href: '/es/planificacion-quirurgica/fotografia-estandarizada',
  },
  {
    num: '05',
    titulo: 'Consentimiento Informado',
    desc: 'Comunicación clara de riesgos y expectativas',
    href: '/es/planificacion-quirurgica/consentimiento-informado',
  },
  {
    num: '06',
    titulo: 'Checklist Preoperatorio',
    desc: 'Verificación final antes de cirugía',
    href: '/es/planificacion-quirurgica/checklist-preoperatorio',
  },
];

const materiales = [
  { nombre: 'Ficha SPE-M', tipo: 'PDF', desc: 'Evaluación estandarizada del paciente' },
  { nombre: 'Formulario Consentimiento', tipo: 'DOCX', desc: 'Plantilla editable' },
  { nombre: 'Checklist Sala', tipo: 'PDF', desc: 'Verificación preoperatoria' },
];
---

<BaseLayout
  title="Planificación Quirúrgica | Face Moderna"
  description="Planificación quirúrgica sistemática para cirugía facial. De la evaluación inicial al checklist preoperatorio."
  lang="es"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/es" class="hover:text-white">Inicio</a></li>
          <li><span>/</span></li>
          <li class="text-white">Planificación Quirúrgica</li>
        </ol>
      </nav>

      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
        Metodología
      </p>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Planificación Quirúrgica
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Una cirugía exitosa comienza mucho antes del quirófano. La planificación sistemática es la
        diferencia entre improvisación y maestría.
      </p>
    </div>
  </section>

  <section class="py-12 bg-accent-600">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <p class="text-xl font-serif text-white italic">
        "Quien falla en planificar, planifica fallar."
      </p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">
        Las 6 Etapas de la Planificación
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          etapas.map((etapa) => (
            <a
              href={etapa.href}
              class="group block p-6 bg-ivory border border-gray-100 hover:border-accent-600 transition-all"
            >
              <span class="text-4xl font-serif text-accent-600/30 group-hover:text-accent-600 transition-colors block mb-4">
                {etapa.num}
              </span>
              <h3 class="font-serif text-primary-900 text-lg mb-2 group-hover:text-accent-600 transition-colors">
                {etapa.titulo}
              </h3>
              <p class="text-sm text-warmGray">{etapa.desc}</p>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">Materiales de Apoyo</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          materiales.map((mat) => (
            <div class="p-6 bg-white border border-gray-100 text-center">
              <span class="text-xs px-2 py-1 bg-accent-600 text-white mb-4 inline-block">
                {mat.tipo}
              </span>
              <h3 class="font-serif text-primary-900 mb-2">{mat.nombre}</h3>
              <p class="text-sm text-warmGray mb-4">{mat.desc}</p>
              <span class="text-xs text-softGray">Disponible en cursos</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-6">Planificación en la Práctica</h2>
      <p class="text-primary-300 mb-8">
        En los cursos del Instituto, recibes todos los materiales y protocolos para implementar la
        planificación sistemática en tu práctica.
      </p>
      <a
        href="/es/formacion"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
        >Conocer Cursos</a
      >
    </div>
  </section>
</BaseLayout>
