---
import BaseLayout from '@layouts/BaseLayout.astro';

const keywords = [
  'errores Endomidface evitar',
  'complicaciones lifting facial',
  'lesión nerviosa prevención',
  'seguridad cirugía facial',
  'errores disección tercio medio',
  'quemosis cierre tensión',
];

const errores = [
  {
    e: 'Profundizar descolador en tercio medio',
    c: 'Lesión de ramas cigomáticas o asa bucal (parálisis)',
    s: 'Siempre inclinar descolador hacia superficie (arriba)',
    g: 'high',
  },
  {
    e: 'Disecar hacia párpado inferior',
    c: 'Entrada a septum orbitario, quemosis prolongada (>1 mes)',
    s: 'Apuntar de canto del ojo hacia ala nasal/comisura',
    g: 'medium',
  },
  {
    e: 'Disección muy superficial en región temporal',
    c: 'Lesión de rama frontal del nervio facial',
    s: 'Asegurar plano entre FTS y FTP, sobre músculo temporal',
    g: 'high',
  },
  {
    e: 'No liberar completamente reborde orbitario',
    c: 'Elevación limitada, asimetrías, resultado insuficiente',
    s: 'Liberación agresiva lateral, superior y medial',
    g: 'medium',
  },
  {
    e: 'Suturas muy bajas o anteriores',
    c: 'Pinzamiento o irritación del nervio frontal',
    s: 'Posicionar suturas lo más posterior y superior posible',
    g: 'medium',
  },
  {
    e: 'Cerrar cuero cabelludo con tensión',
    c: 'Necrosis de bordes, alopecia, cicatriz ensanchada',
    s: 'Tracción en capas profundas, no en piel',
    g: 'high',
  },
];
---

<BaseLayout
  title="Errores Comunes en Endomidface"
  description="Los errores más frecuentes en Endomidface y cómo evitarlos."
  keywords={keywords}
  lang="es"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
        Prevención & Seguridad
      </p><h1 class="text-4xl md:text-5xl font-serif text-white mb-6">Errores Comunes</h1><p
        class="text-xl text-primary-300 max-w-2xl mx-auto"
      >
        Conocer las trampas es el primer paso para evitarlas.
      </p>
    </div>
  </section>
  <section class="py-20 bg-ivory">
    <div class="max-w-5xl mx-auto px-4">
      <div class="space-y-4">
        {
          errores.map((er) => (
            <div
              class={`p-6 border-l-4 ${er.g === 'high' ? 'border-red-500 bg-red-50' : 'border-orange-500 bg-orange-50'}`}
            >
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <>
                  <div>
                    <>
                      <p
                        class={`text-xs font-bold uppercase mb-1 ${er.g === 'high' ? 'text-red-600' : 'text-orange-600'}`}
                      >
                        Error
                      </p>
                      <p class="text-primary-900 font-medium">{er.e}</p>
                    </>
                  </div>
                  <div>
                    <>
                      <p class="text-xs font-bold text-warmGray uppercase mb-1">Consecuencia</p>
                      <p class="text-sm text-warmGray">{er.c}</p>
                    </>
                  </div>
                  <div>
                    <>
                      <p class="text-xs font-bold text-green-600 uppercase mb-1">Solución</p>
                      <p class="text-sm text-warmGray">{er.s}</p>
                    </>
                  </div>
                </>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-serif text-white mb-8 text-center">
        Reglas de Seguridad Innegociables
      </h2><div class="space-y-4 text-white">
        <div class="flex items-start gap-4 p-4 bg-white/10">
          <span class="text-red-400 text-2xl">✕</span><p>
            Nunca cauterizar sin visualización directa en tercio medio
          </p>
        </div><div class="flex items-start gap-4 p-4 bg-white/10">
          <span class="text-red-400 text-2xl">✕</span><p>
            Nunca realizar miotomía del músculo frontal (riesgo de asimetría)
          </p>
        </div><div class="flex items-start gap-4 p-4 bg-white/10">
          <span class="text-red-400 text-2xl">✕</span><p>
            Nunca posicionar suturas muy bajas o cerca de la ceja
          </p>
        </div><div class="flex items-start gap-4 p-4 bg-white/10">
          <span class="text-red-400 text-2xl">✕</span><p>
            Nunca cerrar cuero cabelludo con tensión
          </p>
        </div>
      </div>
    </div>
  </section>
  <section class="py-8 bg-ivory border-t">
    <div class="max-w-5xl mx-auto px-4 flex justify-between">
      <a href="/es/tecnicas/endomidface/paso-a-paso" class="text-sm text-accent-600"
        >← Paso a Paso</a
      ><a href="/es/tecnicas/endomidface/limitaciones" class="text-sm text-accent-600"
        >Limitaciones →</a
      >
    </div>
  </section>
</BaseLayout>
