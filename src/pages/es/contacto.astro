---
import BaseLayout from '@layouts/BaseLayout.astro';
import { contactContent, getContactSchema } from '@lib/content/contact';

const locale = 'es';
const content = contactContent[locale];
const schema = getContactSchema(locale);
---

<BaseLayout
  title={content.meta.title}
  description={content.meta.description}
  keywords={content.meta.keywords}
  schema={schema}
  lang="es"
>
  <!-- Hero -->
  <section class="py-24 bg-ivory">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
        {content.hero.subtitle}
      </p>
      <h1 class="text-4xl md:text-5xl font-serif text-primary-900 mb-6">
        {content.hero.title}
      </h1>
      <p class="text-lg text-warmGray max-w-2xl mx-auto">
        {content.hero.description}
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-serif text-primary-900 mb-8">{content.form.title}</h2>

          <form id="contact-form" class="space-y-6">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-primary-900 mb-2">
                {content.form.name.label}
                <span class="text-accent-600">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder={content.form.name.placeholder}
                class="w-full px-4 py-3 border border-softGray rounded-lg focus:ring-2 focus:ring-accent-600 focus:border-transparent transition-colors"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-primary-900 mb-2">
                {content.form.email.label}
                <span class="text-accent-600">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder={content.form.email.placeholder}
                class="w-full px-4 py-3 border border-softGray rounded-lg focus:ring-2 focus:ring-accent-600 focus:border-transparent transition-colors"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-medium text-primary-900 mb-2">
                {content.form.phone.label}
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                placeholder={content.form.phone.placeholder}
                class="w-full px-4 py-3 border border-softGray rounded-lg focus:ring-2 focus:ring-accent-600 focus:border-transparent transition-colors"
              />
            </div>

            <!-- Subject -->
            <div>
              <label for="subject" class="block text-sm font-medium text-primary-900 mb-2">
                {content.form.subject.label}
                <span class="text-accent-600">*</span>
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-softGray rounded-lg focus:ring-2 focus:ring-accent-600 focus:border-transparent transition-colors bg-white"
              >
                <option value="">{content.form.subject.placeholder}</option>
                {
                  content.form.subject.options.map((option) => (
                    <option value={option}>{option}</option>
                  ))
                }
              </select>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-medium text-primary-900 mb-2">
                {content.form.message.label}
                <span class="text-accent-600">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                placeholder={content.form.message.placeholder}
                class="w-full px-4 py-3 border border-softGray rounded-lg focus:ring-2 focus:ring-accent-600 focus:border-transparent transition-colors resize-none"
              ></textarea>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full bg-accent-600 text-white py-4 px-8 rounded-lg font-medium hover:bg-accent-700 transition-colors duration-300 focus:ring-2 focus:ring-accent-600 focus:ring-offset-2"
            >
              {content.form.submit}
            </button>

            <!-- Status Messages -->
            <div id="form-status" class="hidden">
              <p id="form-success" class="hidden text-green-600 text-sm p-4 bg-green-50 rounded-lg">
                {content.form.success}
              </p>
              <p id="form-error" class="hidden text-red-600 text-sm p-4 bg-red-50 rounded-lg">
                {content.form.error}
              </p>
            </div>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="lg:pl-8">
          <h2 class="text-2xl font-serif text-primary-900 mb-8">{content.info.title}</h2>

          <div class="space-y-8">
            <!-- Address -->
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 text-accent-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-primary-900 mb-1">{content.info.address.label}</h3>
                <p class="text-warmGray">{content.info.address.line1}</p>
                <p class="text-warmGray">{content.info.address.line2}</p>
                <p class="text-warmGray">{content.info.address.line3}</p>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 text-accent-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-primary-900 mb-1">{content.info.phone.label}</h3>
                <a
                  href={`tel:${content.info.phone.value.replace(/\s/g, '')}`}
                  class="text-accent-600 hover:text-accent-700 transition-colors"
                >
                  {content.info.phone.value}
                </a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 text-accent-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-primary-900 mb-1">{content.info.email.label}</h3>
                <a
                  href={`mailto:${content.info.email.value}`}
                  class="text-accent-600 hover:text-accent-700 transition-colors"
                >
                  {content.info.email.value}
                </a>
              </div>
            </div>

            <!-- Hours -->
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 text-accent-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-primary-900 mb-1">{content.info.hours.label}</h3>
                <p class="text-warmGray">{content.info.hours.weekdays}</p>
                <p class="text-warmGray">{content.info.hours.weekend}</p>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="mt-12 pt-8 border-t border-softGray">
            <h3 class="font-medium text-primary-900 mb-4">{content.social.title}</h3>
            <div class="flex gap-4">
              <a
                href="https://instagram.com/modernfaceinstitute"
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-primary-900 rounded-full flex items-center justify-center text-white hover:bg-accent-600 transition-colors"
                aria-label="Instagram"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                  ></path>
                </svg>
              </a>
              <a
                href="https://youtube.com/@modernfaceinstitute"
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-primary-900 rounded-full flex items-center justify-center text-white hover:bg-accent-600 transition-colors"
                aria-label="YouTube"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                  ></path>
                </svg>
              </a>
              <a
                href="https://linkedin.com/in/drroberiobrandao"
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-primary-900 rounded-full flex items-center justify-center text-white hover:bg-accent-600 transition-colors"
                aria-label="LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section (Optional placeholder) -->
  <section class="h-64 bg-softGray relative">
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="text-center">
        <svg
          class="w-12 h-12 text-warmGray mx-auto mb-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <p class="text-warmGray">Natal, RN - Brasil</p>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const formStatus = document.getElementById('form-status');
  const formSuccess = document.getElementById('form-success');
  const formError = document.getElementById('form-error');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitBtn.textContent;
    submitBtn.textContent = 'Enviando...';
    submitBtn.disabled = true;

    // Simulate form submission (replace with actual endpoint)
    try {
      await new Promise((resolve) => setTimeout(resolve, 1000));

      formStatus?.classList.remove('hidden');
      formSuccess?.classList.remove('hidden');
      formError?.classList.add('hidden');
      form.reset();
    } catch {
      formStatus?.classList.remove('hidden');
      formError?.classList.remove('hidden');
      formSuccess?.classList.add('hidden');
    } finally {
      submitBtn.textContent = originalText;
      submitBtn.disabled = false;
    }
  });
</script>
