---
import BaseLayout from '@layouts/BaseLayout.astro';

const programas = [
  {
    destaque: true,
    titulo: 'Formación Avanzada',
    subtitulo: 'Programa de Dominio de la Face Moderna®',
    desc: 'ENDOMIDFACE® + Deep Neck + 6 meses de Mentoría. Formación completa para dominio integral.',
    precio: 'USD 6.000',
    precioOriginal: 'USD 11.200',
    ahorro: 'USD 5.200',
    href: '/es/educacion/formacion-avanzada',
    badge: 'RECOMENDADO',
  },
  {
    titulo: 'ENDOMIDFACE® por Visión Directa',
    subtitulo: 'Curso Online + 2 meses de Mentoría',
    desc: 'Dominio técnico del tercio medio de la cara. Elimina dependencia del endoscopio.',
    precio: 'USD 2.000',
    precioOriginal: 'USD 4.000',
    ahorro: 'USD 2.000',
    href: '/es/educacion/programas-nucleo/endomidface-vision-directa',
  },
  {
    titulo: 'Deep Neck Mastery',
    subtitulo: 'Curso Online + 2 meses de Mentoría',
    desc: 'Especialización en contorno cervical y mandibular. Casos complejos con seguridad.',
    precio: 'USD 1.800',
    precioOriginal: 'USD 3.600',
    ahorro: 'USD 1.800',
    href: '/es/educacion/programas-nucleo/deep-neck-mastery',
  },
];

const diferenciales = [
  {
    icono: 'visibility',
    titulo: 'Visión Directa',
    desc: 'Metodología que elimina la dependencia del endoscopio',
  },
  {
    icono: 'groups',
    titulo: 'Mentoría Real',
    desc: 'Acompañamiento estructurado con análisis de casos',
  },
  {
    icono: 'verified',
    titulo: '212+ Casos',
    desc: 'Técnica validada sin lesiones nerviosas permanentes',
  },
  {
    icono: 'school',
    titulo: 'Formación Completa',
    desc: 'Del concepto a la ejecución, de básico a avanzado',
  },
];
---

<BaseLayout
  title="Educación | Formación en Cirugía Facial"
  description="Programas de formación en cirugía facial avanzada. ENDOMIDFACE®, Deep Neck y Formación Avanzada con mentoría."
  lang="es"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
        Modern Face Institute
      </p>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Formación en Cirugía Facial
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Programas estructurados para cirujanos que buscan dominio técnico, seguridad y resultados
        consistentes en la metodología Face Moderna®.
      </p>
    </div>
  </section>

  <section class="py-12 bg-accent-600">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <p class="text-xl font-serif text-white italic">
        "No enseñamos solo técnica. Formamos cirujanos que piensan, planifican y deciden."
      </p>
      <p class="text-white/70 text-sm mt-2">— Dr. Robério Brandão</p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-4 text-center">Programas de Formación</h2>
      <p class="text-warmGray text-center mb-12">Elija el programa adecuado a su momento</p>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {
          programas.map((prog) => (
            <a
              href={prog.href}
              class={`group block p-8 border transition-all ${prog.destaque ? 'bg-primary-900 border-primary-900 text-white' : 'bg-white border-gray-100 hover:border-accent-600'}`}
            >
              {prog.badge && (
                <span class="inline-block px-3 py-1 bg-accent-600 text-white text-xs uppercase tracking-wider mb-4">
                  {prog.badge}
                </span>
              )}
              <h3
                class={`text-xl font-serif mb-1 ${prog.destaque ? 'text-white' : 'text-primary-900 group-hover:text-accent-600'} transition-colors`}
              >
                {prog.titulo}
              </h3>
              <p class={`text-sm mb-4 ${prog.destaque ? 'text-primary-300' : 'text-accent-600'}`}>
                {prog.subtitulo}
              </p>
              <p class={`text-sm mb-6 ${prog.destaque ? 'text-primary-300' : 'text-warmGray'}`}>
                {prog.desc}
              </p>

              <div class={`pt-4 border-t ${prog.destaque ? 'border-white/20' : 'border-gray-100'}`}>
                <p
                  class={`text-2xl font-serif ${prog.destaque ? 'text-accent-400' : 'text-primary-900'}`}
                >
                  {prog.precio}
                </p>
                <p class={`text-xs ${prog.destaque ? 'text-primary-400' : 'text-softGray'}`}>
                  <span class="line-through">{prog.precioOriginal}</span>
                  <span class="ml-2 text-green-500">Ahorro: {prog.ahorro}</span>
                </p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">
        Por qué Estudiar con Nosotros
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          diferenciales.map((dif) => (
            <div class="text-center p-6">
              <span class="material-symbols-outlined text-accent-600 text-3xl mb-4 block">
                {dif.icono}
              </span>
              <h3 class="font-medium text-primary-900 mb-2">{dif.titulo}</h3>
              <p class="text-sm text-warmGray">{dif.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-4 text-center">Cursos Satélites</h2>
      <p class="text-warmGray text-center mb-8">
        Módulos complementarios para profundización en áreas específicas
      </p>
      <div class="text-center">
        <a
          href="/es/educacion/cursos-satelites"
          class="inline-block px-8 py-4 border-2 border-primary-900 text-primary-900 text-sm uppercase tracking-[0.15em] hover:bg-primary-900 hover:text-white transition-colors"
        >
          Ver Todos los Cursos
        </a>
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-serif text-white mb-6">¿Listo para Comenzar?</h2>
      <p class="text-primary-300 mb-8">
        Contáctenos para discutir qué programa es más adecuado para su momento profesional.
      </p>
      <a
        href="https://wa.me/5531999999999"
        target="_blank"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
      >
        Hablar con el Equipo
      </a>
    </div>
  </section>
</BaseLayout>
