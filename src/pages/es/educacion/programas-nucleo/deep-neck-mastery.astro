---
import BaseLayout from '@layouts/BaseLayout.astro';

const modulos = [
  {
    num: '01',
    titulo: 'Anatomía Cervical Aplicada',
    desc: 'Estructuras, planos y zonas de riesgo',
  },
  { num: '02', titulo: 'Glándula Submandibular', desc: 'Manejo conservador sin resección' },
  { num: '03', titulo: 'Lipectomía Precisa', desc: 'Remoción selectiva de grasa profunda' },
  {
    num: '04',
    titulo: 'Plastia Muscular Cervical',
    desc: 'Platismorrafia y técnicas de sustentación',
  },
  { num: '05', titulo: 'Casos Complejos', desc: 'Cuellos difíciles y revisiones' },
  { num: '06', titulo: 'Integración Midface-Neck', desc: 'Abordaje armónico de la cara completa' },
];

const mentoria = [
  '2 meses de acompañamiento estructurado',
  'Encuentros semanales en grupo',
  'Análisis de casos complejos',
  'Feedback directo del Dr. Robério',
  'Acceso al grupo exclusivo',
];

const diferenciales = [
  { titulo: 'Sin Resección Glandular', desc: 'Tratamiento de glándula submandibular sin remoción' },
  { titulo: 'Lipectomía Precisa', desc: 'Remoción selectiva, no agresiva' },
  { titulo: 'Plastia Muscular', desc: 'Técnicas avanzadas de sustentación' },
  { titulo: 'Contorno Elegante', desc: 'Mandíbula y cuello en armonía' },
];
---

<BaseLayout
  title="Deep Neck Mastery | Curso + Mentoría"
  description="Curso completo de Deep Neck con 2 meses de mentoría. Domine el contorno cervical y mandibular."
  lang="es"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/es" class="hover:text-white">Inicio</a></li>
          <li><span>/</span></li>
          <li><a href="/es/educacion" class="hover:text-white">Educación</a></li>
          <li><span>/</span></li>
          <li class="text-white">Deep Neck</li>
        </ol>
      </nav>
      <span
        class="inline-block px-4 py-1 bg-accent-600 text-white text-xs uppercase tracking-wider mb-6"
      >
        Programa Núcleo
      </span>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Deep Neck Mastery
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Curso online completo + 2 meses de mentoría estructurada. Especialización avanzada en
        contorno cervical y mandibular.
      </p>
    </div>
  </section>

  <section class="py-8 bg-accent-600">
    <div class="max-w-4xl mx-auto px-4 flex flex-wrap items-center justify-center gap-8 text-white">
      <div class="text-center">
        <p class="text-sm opacity-70">Inversión</p>
        <p class="text-3xl font-serif">USD 1.800</p>
      </div>
      <div class="text-center">
        <p class="text-sm opacity-70">Valor Original</p>
        <p class="text-xl line-through opacity-50">USD 3.600</p>
      </div>
      <div class="text-center">
        <p class="text-sm opacity-70">Ahorro</p>
        <p class="text-xl text-green-300">USD 1.800</p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">El Programa</h2>
      <div class="prose prose-lg max-w-none text-warmGray">
        <p class="drop-cap">
          Deep Neck Mastery es el programa de especialización avanzada en contorno cervical y
          mandibular. Indicado para cirujanos que ya dominan lo básico y buscan refinamiento máximo,
          seguridad técnica y previsibilidad en una de las regiones más desafiantes de la cirugía
          facial.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">Contenido del Curso</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          modulos.map((m) => (
            <div class="flex items-start gap-4 p-6 bg-ivory border border-gray-100">
              <span class="text-3xl font-serif text-accent-600/30">{m.num}</span>
              <div>
                <h3 class="font-serif text-primary-900 mb-1">{m.titulo}</h3>
                <p class="text-sm text-warmGray">{m.desc}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-white mb-8 text-center">Mentoría Incluida</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          mentoria.map((item) => (
            <div class="flex items-center gap-3 p-4 bg-white/10">
              <span class="material-symbols-outlined text-accent-400">check_circle</span>
              <span class="text-white">{item}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">Foco Técnico</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          diferenciales.map((d) => (
            <div class="p-6 bg-white border border-gray-100">
              <h3 class="font-medium text-primary-900 mb-2">{d.titulo}</h3>
              <p class="text-sm text-warmGray">{d.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-accent-600">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-serif text-white mb-4">¿Listo para Dominar el Cuello?</h2>
      <a
        href="https://wa.me/5531999999999"
        target="_blank"
        class="inline-block px-8 py-4 bg-white text-primary-900 text-sm uppercase tracking-[0.15em] hover:bg-gray-100 transition-colors"
      >
        Garantizar Mi Plaza
      </a>
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a
        href="/es/educacion/programas-nucleo/endomidface-vision-directa"
        class="text-sm text-accent-600">← ENDOMIDFACE®</a
      >
      <a href="/es/educacion/formacion-avanzada" class="text-sm text-accent-600"
        >Formación Avanzada →</a
      >
    </div>
  </section>
</BaseLayout>
