---
import BaseLayout from '@layouts/BaseLayout.astro';

const modulos = [
  {
    num: '01',
    titulo: 'Fundamentos de la Face Moderna',
    desc: 'Filosofía, principios y anatomía aplicada',
  },
  {
    num: '02',
    titulo: 'Anatomía del Tercio Medio',
    desc: 'Espacios, ligamentos y estructuras críticas',
  },
  { num: '03', titulo: 'Técnica por Visión Directa', desc: 'Acceso, disección y movilización' },
  {
    num: '04',
    titulo: 'Vectores y Fijación',
    desc: 'Vector vertical 90° y fijación temporal profunda',
  },
  { num: '05', titulo: 'Casos Clínicos', desc: 'Análisis de casos reales y toma de decisiones' },
  { num: '06', titulo: 'Complicaciones y Manejo', desc: 'Prevención, identificación y resolución' },
];

const mentoria = [
  '2 meses de acompañamiento estructurado',
  'Encuentros semanales en grupo',
  'Análisis de casos de participantes',
  'Feedback directo del Dr. Robério',
  'Acceso al grupo exclusivo',
];

const resultados = [
  'Eliminar dependencia del endoscopio',
  'Dominar el plano sub-SMAS areolar',
  'Ejecutar vector vertical con precisión',
  'Resultados naturales y duraderos',
  'Seguridad máxima en cada procedimiento',
];
---

<BaseLayout
  title="ENDOMIDFACE® por Visión Directa | Curso + Mentoría"
  description="Curso completo de ENDOMIDFACE® con 2 meses de mentoría. Domine el tercio medio sin endoscopio."
  lang="es"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/es" class="hover:text-white">Inicio</a></li>
          <li><span>/</span></li>
          <li><a href="/es/educacion" class="hover:text-white">Educación</a></li>
          <li><span>/</span></li>
          <li class="text-white">ENDOMIDFACE®</li>
        </ol>
      </nav>
      <span
        class="inline-block px-4 py-1 bg-accent-600 text-white text-xs uppercase tracking-wider mb-6"
      >
        Programa Núcleo
      </span>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        ENDOMIDFACE®<br />por Visión Directa
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Curso online completo + 2 meses de mentoría estructurada. Domine el tercio medio sin
        dependencia del endoscopio.
      </p>
    </div>
  </section>

  <section class="py-8 bg-accent-600">
    <div class="max-w-4xl mx-auto px-4 flex flex-wrap items-center justify-center gap-8 text-white">
      <div class="text-center">
        <p class="text-sm opacity-70">Inversión</p>
        <p class="text-3xl font-serif">USD 2.000</p>
      </div>
      <div class="text-center">
        <p class="text-sm opacity-70">Valor Original</p>
        <p class="text-xl line-through opacity-50">USD 4.000</p>
      </div>
      <div class="text-center">
        <p class="text-sm opacity-70">Ahorro</p>
        <p class="text-xl text-green-300">USD 2.000</p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">El Programa</h2>
      <div class="prose prose-lg max-w-none text-warmGray">
        <p class="drop-cap">
          ENDOMIDFACE® por Visión Directa es el programa de dominio técnico del tercio medio de la
          cara. Introduce al cirujano a la filosofía Face Moderna®, eliminando la dependencia del
          endoscopio y estableciendo un abordaje más directo, seguro y reproducible.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">Contenido del Curso</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          modulos.map((m) => (
            <div class="flex items-start gap-4 p-6 bg-ivory border border-gray-100">
              <span class="text-3xl font-serif text-accent-600/30">{m.num}</span>
              <div>
                <h3 class="font-serif text-primary-900 mb-1">{m.titulo}</h3>
                <p class="text-sm text-warmGray">{m.desc}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-white mb-8 text-center">Mentoría Incluida</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          mentoria.map((item) => (
            <div class="flex items-center gap-3 p-4 bg-white/10">
              <span class="material-symbols-outlined text-accent-400">check_circle</span>
              <span class="text-white">{item}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">Lo que Conquistará</h2>
      <div class="space-y-3">
        {
          resultados.map((r) => (
            <div class="flex items-center gap-3 p-4 bg-white border border-gray-100">
              <span class="material-symbols-outlined text-green-600">verified</span>
              <span class="text-warmGray">{r}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-accent-600">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-serif text-white mb-4">¿Listo para Dominar el Tercio Medio?</h2>
      <a
        href="https://wa.me/5531999999999"
        target="_blank"
        class="inline-block px-8 py-4 bg-white text-primary-900 text-sm uppercase tracking-[0.15em] hover:bg-gray-100 transition-colors"
      >
        Garantizar Mi Plaza
      </a>
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/es/educacion" class="text-sm text-accent-600">← Educación</a>
      <a href="/es/educacion/programas-nucleo/deep-neck-mastery" class="text-sm text-accent-600"
        >Deep Neck Mastery →</a
      >
    </div>
  </section>
</BaseLayout>
