---
import BaseLayout from '@layouts/BaseLayout.astro';
import { casesContent, getCasesSchema } from '@lib/content/cases';

const locale = 'es';
const content = casesContent[locale];
const schema = getCasesSchema(locale);

const keywords = [
  'casos quirúrgicos Face Moderna',
  'resultados ENDOMIDFACE',
  'Deep Neck antes después',
  'Browlift resultados',
  'cirugía facial completa',
  'galería Dr Robério Brandão',
];

// Placeholder - será dinámico en el futuro
const casos = [
  {
    id: 1,
    titulo: 'Endomidface + Deep Neck',
    descripcion: 'Paciente 58 años, ptosis severa tercio medio, laxitud cervical',
    tecnicas: ['Endomidface', 'Deep Neck'],
    edad: 58,
    tiempo: '180 min',
    imagen: '/images/casos/before-after/before-after-1.png',
  },
  {
    id: 2,
    titulo: 'Endomidface Aislado',
    descripcion: 'Paciente 52 años, surco nasogeniano profundo, malar ptótico',
    tecnicas: ['Endomidface'],
    edad: 52,
    tiempo: '120 min',
    imagen: '/images/casos/before-after/before-after-2.png',
  },
  {
    id: 3,
    titulo: 'Cara Completa',
    descripcion: 'Paciente 62 años, browlift + endomidface + deep neck',
    tecnicas: ['Browlift', 'Endomidface', 'Deep Neck'],
    edad: 62,
    tiempo: '240 min',
    imagen: '/images/casos/before-after/before-after-3.png',
  },
  {
    id: 4,
    titulo: 'Deep Neck + Endomidface',
    descripcion: 'Paciente 55 años, bandas platismales prominentes, malar ptótico',
    tecnicas: ['Deep Neck', 'Endomidface'],
    edad: 55,
    tiempo: '200 min',
    imagen: '/images/casos/before-after/before-after-4.png',
  },
  {
    id: 5,
    titulo: 'Browlift Endoscópico',
    descripcion: 'Paciente 48 años, ptosis superciliar bilateral, líneas frontales',
    tecnicas: ['Browlift'],
    edad: 48,
    tiempo: '90 min',
    imagen: '/images/casos/before-after/before-after-5.png',
  },
  {
    id: 6,
    titulo: 'Endomidface Bilateral',
    descripcion: 'Paciente 60 años, surcos profundos, pérdida de proyección malar',
    tecnicas: ['Endomidface'],
    edad: 60,
    tiempo: '140 min',
    imagen: '/images/casos/before-after/before-after-6.png',
  },
];
---

<BaseLayout
  title="Casos Quirúrgicos | Dr. Robério Brandão"
  description="Galería de casos quirúrgicos realizados por el Dr. Robério Brandão con la metodología Face Moderna®."
  keywords={keywords}
  schema={schema}
  lang={locale}
>
  <!-- Breadcrumb -->
  <section class="pt-28 pb-4 bg-ivory">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <nav class="flex items-center gap-2 text-xs text-softGray">
        <a href="/es" class="hover:text-accent-600">{content.ui.breadcrumb.home}</a>
        <span>/</span>
        <a href="/es/casos" class="hover:text-accent-600">{content.ui.breadcrumb.cases}</a>
        <span>/</span>
        <span class="text-primary-900">{content.ui.breadcrumb.surgical}</span>
      </nav>
    </div>
  </section>

  <!-- Hero -->
  <section class="section-md bg-ivory">
    <div class="prose-wide">
      <p class="label-eyebrow">
        {content.stats.documented.value} Casos Documentados
      </p>
      <h1 class="heading-1">{content.ui.breadcrumb.surgical}</h1>
      <p class="body-base max-w-2xl">
        Resultados de procedimientos realizados por el Dr. Robério Brandão. Cada caso incluye
        documentación completa con planificación, técnica y resultado.
      </p>
    </div>
  </section>

  <!-- Filtros (futuro) -->
  <section class="section-xs bg-white border-y border-gray-100">
    <div class="prose-wide">
      <div class="flex flex-wrap gap-3">
        <button class="px-4 py-2 text-xs font-medium bg-primary-900 text-white rounded-full">
          {content.ui.allFilter}
        </button>
        <button
          class="px-4 py-2 text-xs font-medium bg-gray-100 text-warmGray hover:bg-gray-200 rounded-full transition-colors"
        >
          Endomidface
        </button>
        <button
          class="px-4 py-2 text-xs font-medium bg-gray-100 text-warmGray hover:bg-gray-200 rounded-full transition-colors"
        >
          Deep Neck
        </button>
        <button
          class="px-4 py-2 text-xs font-medium bg-gray-100 text-warmGray hover:bg-gray-200 rounded-full transition-colors"
        >
          Browlift
        </button>
        <button
          class="px-4 py-2 text-xs font-medium bg-gray-100 text-warmGray hover:bg-gray-200 rounded-full transition-colors"
        >
          Cara Completa
        </button>
      </div>
    </div>
  </section>

  <!-- Lista de Casos -->
  <section class="section-md bg-ivory">
    <div class="prose-wide">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          casos.map((caso) => (
            <div class="group bg-white border border-gray-100 hover:border-accent-600 hover:shadow-lg transition-all cursor-pointer">
              {/* Imagen del caso */}
              <div class="aspect-[4/3] bg-ivory relative overflow-hidden">
                <img
                  src={caso.imagen}
                  alt={caso.titulo}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <div class="absolute top-3 left-3 flex gap-2">
                  {caso.tecnicas.map((tec) => (
                    <span class="px-2 py-1 bg-primary-900/90 text-white text-[10px] uppercase tracking-wider">
                      {tec}
                    </span>
                  ))}
                </div>
              </div>

              <div class="p-5">
                <h3 class="heading-4 mb-2 group-hover:text-accent-600 transition-colors">
                  {caso.titulo}
                </h3>
                <p class="body-small mb-4">{caso.descripcion}</p>
                <div class="flex items-center gap-4 text-xs text-softGray">
                  <span>{caso.edad} años</span>
                  <span>•</span>
                  <span>{caso.tiempo}</span>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <!-- Próximamente más casos -->
      <div class="mt-12 text-center">
        <p class="body-base mb-4">
          Galería completa en desarrollo. {content.stats.documented.value} casos se añadirán progresivamente.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
