---
import BaseLayout from '@layouts/BaseLayout.astro';

const modulos = [
  {
    nombre: 'Prontuario Digital',
    desc: 'Documentación estructurada para cirugía facial',
    href: '/es/tecnologia-clinica/faceos/prontuario',
  },
  {
    nombre: 'Sistema SPE-M',
    desc: 'Evaluación estandarizada preoperatoria',
    href: '/es/tecnologia-clinica/faceos/spe-m',
  },
  {
    nombre: 'Planificación de Vectores',
    desc: 'Definición y visualización de direcciones',
    href: '/es/tecnologia-clinica/faceos/planificacion-vectores',
  },
  {
    nombre: 'Checklists',
    desc: 'Protocolos paso a paso',
    href: '/es/tecnologia-clinica/faceos/checklists',
  },
];

const beneficios = [
  'Estandarización de toda la documentación clínica',
  'Reducción de errores por olvido',
  'Historial completo de cada paciente',
  'Base de datos para análisis de resultados',
  'Comunicación clara con equipo',
  'Soporte a la enseñanza y aprendizaje',
];
---

<BaseLayout
  title="FaceOS | Sistema Operativo de la Face Moderna"
  description="FaceOS: plataforma integrada para gestión clínica, evaluación y planificación en cirugía facial."
  lang="es"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/es" class="hover:text-white">Inicio</a></li><li><span>/</span></li><li>
            <a href="/es/tecnologia-clinica" class="hover:text-white">Tecnología</a>
          </li><li><span>/</span></li><li class="text-white">FaceOS</li>
        </ol>
      </nav>
      <span
        class="inline-block px-4 py-1 bg-amber-500 text-white text-xs uppercase tracking-wider mb-6"
        >En Desarrollo</span
      >
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">FaceOS</h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        El Sistema Operativo de la Face Moderna®. Una plataforma integrada para gestión clínica,
        evaluación y planificación quirúrgica.
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">¿Qué es FaceOS?</h2>
      <div class="prose prose-lg max-w-none text-warmGray">
        <p class="drop-cap">
          FaceOS es una plataforma digital desarrollada específicamente para la práctica de cirugía
          facial siguiendo la metodología Face Moderna®. No es un prontuario genérico adaptado — es
          un sistema construido desde cero pensando en las necesidades específicas del cirujano
          facial.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">Módulos del Sistema</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          modulos.map((m) => (
            <a
              href={m.href}
              class="group flex items-start gap-4 p-6 bg-ivory border border-gray-100 hover:border-accent-600 transition-all"
            >
              <span class="material-symbols-outlined text-accent-600 text-2xl flex-shrink-0">
                folder
              </span>
              <div>
                <>
                  <h3 class="font-medium text-primary-900 group-hover:text-accent-600 transition-colors mb-1">
                    {m.nombre}
                  </h3>
                  <p class="text-sm text-warmGray">{m.desc}</p>
                </>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">¿Por qué Usar?</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          beneficios.map((b) => (
            <div class="flex items-center gap-3 p-4 bg-white border border-gray-100">
              <>
                <span class="material-symbols-outlined text-green-600">check_circle</span>
                <span class="text-warmGray">{b}</span>
              </>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-6">Acceso Prioritario</h2>
      <p class="text-primary-300 mb-8">
        Alumnos de los programas de formación tendrán acceso anticipado al FaceOS.
      </p>
      <a
        href="/es/educacion"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
        >Ver Programas</a
      >
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/es/tecnologia-clinica" class="text-sm text-accent-600">← Tecnología Clínica</a>
      <a href="/es/tecnologia-clinica/faceos/spe-m" class="text-sm text-accent-600"
        >Sistema SPE-M →</a
      >
    </div>
  </section>
</BaseLayout>
