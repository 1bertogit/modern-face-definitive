---
import BaseLayout from '@layouts/BaseLayout.astro';

const secciones = [
  { nombre: 'Identificación', campos: ['Datos personales', 'Contacto', 'Profesión', 'Indicación'] },
  {
    nombre: 'Anamnesis Dirigida',
    campos: ['Queja principal', 'Expectativas', 'Historial estético', 'Comorbilidades'],
  },
  {
    nombre: 'Evaluación SPE-M',
    campos: ['Skin score', 'Ptosis score', 'Estructura score', 'Masa score'],
  },
  {
    nombre: 'Planificación',
    campos: ['Técnica indicada', 'Vectores definidos', 'Complementaciones', 'Riesgos específicos'],
  },
  {
    nombre: 'Documentación',
    campos: [
      'Fotos estandarizadas',
      'Término de consentimiento',
      'Orientaciones',
      'Checklist pre-op',
    ],
  },
  {
    nombre: 'Quirúrgico',
    campos: ['Descripción técnica', 'Intercurrencias', 'Tiempo quirúrgico', 'Observaciones'],
  },
  {
    nombre: 'Follow-up',
    campos: ['Evolución por fecha', 'Fotos comparativas', 'Satisfacción', 'Complicaciones'],
  },
];
---

<BaseLayout
  title="Prontuario Digital | FaceOS"
  description="Prontuario digital especializado para cirugía facial. Documentación estructurada de la anamnesis al follow-up."
  lang="es"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/es" class="hover:text-white">Inicio</a></li><li><span>/</span></li><li>
            <a href="/es/tecnologia-clinica" class="hover:text-white">Tecnología</a>
          </li><li><span>/</span></li><li>
            <a href="/es/tecnologia-clinica/faceos" class="hover:text-white">FaceOS</a>
          </li><li><span>/</span></li><li class="text-white">Prontuario</li>
        </ol>
      </nav>
      <span
        class="inline-block px-4 py-1 bg-amber-500 text-white text-xs uppercase tracking-wider mb-6"
        >En Desarrollo</span
      >
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Prontuario Digital
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Documentación estructurada específicamente para cirugía facial. De la primera consulta al
        follow-up de largo plazo.
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">
        ¿Por qué un Prontuario Específico?
      </h2>
      <div class="prose prose-lg max-w-none text-warmGray">
        <p class="drop-cap">
          Los prontuarios genéricos no atienden las necesidades específicas de la cirugía facial.
          Campos importantes quedan en "observaciones", informaciones críticas se pierden, y la
          comparación entre casos se vuelve imposible.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">
        Estructura del Prontuario
      </h2>
      <div class="space-y-4">
        {
          secciones.map((s, i) => (
            <div class="p-6 bg-ivory border border-gray-100">
              <div class="flex items-start gap-4">
                <span class="w-8 h-8 bg-accent-600 text-white text-sm flex items-center justify-center flex-shrink-0">
                  {i + 1}
                </span>
                <div class="flex-1">
                  <h3 class="font-medium text-primary-900 mb-2">{s.nombre}</h3>
                  <div class="flex flex-wrap gap-2">
                    {s.campos.map((c) => (
                      <span class="text-xs px-2 py-1 bg-white text-warmGray border border-gray-200">
                        {c}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-6">Próximamente</h2>
      <p class="text-primary-300 mb-8">
        El Prontuario Digital FaceOS está en desarrollo activo. Los alumnos de los programas tendrán
        acceso prioritario.
      </p>
      <a
        href="/es/educacion"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
        >Ver Programas</a
      >
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/es/tecnologia-clinica/faceos/spe-m" class="text-sm text-accent-600"
        >← Sistema SPE-M</a
      >
      <a href="/es/tecnologia-clinica/faceos/planificacion-vectores" class="text-sm text-accent-600"
        >Planificación de Vectores →</a
      >
    </div>
  </section>
</BaseLayout>
