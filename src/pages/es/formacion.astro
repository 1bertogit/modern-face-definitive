---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/ui/Button.astro';

const keywords = [
  'curso Face Moderna',
  'formación cirugía facial',
  'curso Endomidface',
  'entrenamiento lifting facial',
  'Dr Robério Brandão curso',
];

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Course',
  name: 'Formación Face Moderna®',
  description: 'Curso presencial intensivo de 3 días para dominar las técnicas de Face Moderna®',
  provider: {
    '@type': 'Person',
    name: 'Dr. Robério Brandão',
  },
};

const modules = [
  {
    day: 'Día 1',
    title: 'Fundamentos y Anatomía',
    topics: [
      'Anatomía aplicada: SMAS, ligamentos y espacios',
      'GPS Táctil: entrenamiento de sensibilidad',
      'Demostración quirúrgica en cadáver',
      'Planificación quirúrgica personalizada',
    ],
  },
  {
    day: 'Día 2',
    title: 'Técnicas en Acción',
    topics: [
      'Endomidface por Visión Directa (hands-on)',
      'Browlift Evolutivo',
      'Deep Neck sin remoción glandular',
      'Casos complejos y variantes anatómicas',
    ],
  },
  {
    day: 'Día 3',
    title: 'Integración y Mentoría',
    topics: [
      'Cirugía en vivo con discusión',
      'Complicaciones y cómo evitarlas',
      'Postoperatorio acelerado',
      'Mentoría continuada: próximos pasos',
    ],
  },
];

const testimonials = [
  {
    quote:
      'Después de 10 años haciendo lifting tradicional, el curso cambió completamente mi enfoque. Ya operé 15 casos con la técnica y los resultados son consistentes.',
    author: 'Dr. Carlos M.',
    role: 'São Paulo, SP',
  },
  {
    quote:
      'El GPS Táctil es un game changer. Nunca más sentí miedo del plano profundo. La seguridad que tengo hoy es incomparable.',
    author: 'Dra. Amanda L.',
    role: 'Rio de Janeiro, RJ',
  },
];
---

<BaseLayout
  title="Formación Face Moderna®"
  description="Curso presencial intensivo de 3 días para dominar las técnicas de Face Moderna®. Aprende con Dr. Robério Brandão."
  schema={schema}
  keywords={keywords}
  lang="es"
>
  <!-- Hero -->
  <section class="py-32 bg-ivory">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
            Formación Presencial
          </p>
          <h1 class="text-4xl md:text-5xl font-serif text-primary-900 leading-tight mb-6">
            Domina en 30 Casos,<br />No en 10 Años.
          </h1>
          <p class="text-lg text-warmGray leading-relaxed mb-8">
            Curso intensivo de 3 días con teoría, hands-on en cadáver y cirugía en vivo. Sal
            operando con seguridad en el plano profundo.
          </p>

          <div class="flex flex-wrap gap-8 py-6 border-y border-gray-200 mb-8">
            <div class="text-center">
              <p class="text-3xl font-normal text-primary-900 font-serif">3 Días</p>
              <p class="text-[10px] text-softGray uppercase tracking-[0.2em] font-light">
                Duración
              </p>
            </div>
            <div class="text-center">
              <p class="text-3xl font-normal text-primary-900 font-serif">8</p>
              <p class="text-[10px] text-softGray uppercase tracking-[0.2em] font-light">
                Plazas/Grupo
              </p>
            </div>
            <div class="text-center">
              <p class="text-3xl font-normal text-primary-900 font-serif">100%</p>
              <p class="text-[10px] text-softGray uppercase tracking-[0.2em] font-light">
                Práctico
              </p>
            </div>
          </div>

          <Button href="#inscripcion" variant="primary" size="lg"> Garantizar Mi Plaza </Button>
        </div>

        <div class="relative">
          <img
            src="/images/techniques/formacao-hero.png"
            alt="Curso de Formación Avanzada Face Moderna - Dr. Robério Brandão"
            class="rounded-lg desaturated-img"
            width="800"
            height="600"
            loading="eager"
            fetchpriority="high"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Programa -->
  <section class="py-32 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
          Programa
        </h2>
        <h3 class="text-4xl md:text-5xl font-serif text-primary-900">Lo Que Vas a Aprender</h3>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          modules.map((module) => (
            <div class="bg-ivory p-8 rounded-lg border border-gray-100">
              <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-2">
                {module.day}
              </p>
              <h4 class="text-xl font-serif font-normal text-primary-900 mb-6">{module.title}</h4>
              <ul class="space-y-3">
                {module.topics.map((topic) => (
                  <li class="flex items-start gap-3">
                    <span class="material-symbols-outlined text-accent-600 text-sm mt-1">
                      arrow_right
                    </span>
                    <span class="text-warmGray text-sm">{topic}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Depoimentos -->
  <section class="py-32 bg-ivory">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
          Testimonios
        </h2>
        <h3 class="text-4xl font-serif text-primary-900">Lo Que Dicen los Alumnos</h3>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          testimonials.map((testimonial) => (
            <div class="bg-white p-8 rounded-lg border border-gray-100">
              <span class="material-symbols-outlined text-3xl text-accent-600 mb-4">
                format_quote
              </span>
              <p class="text-warmGray leading-relaxed mb-6 italic">"{testimonial.quote}"</p>
              <div>
                <p class="font-medium text-primary-900 text-sm">{testimonial.author}</p>
                <p class="text-xs text-softGray font-light">{testimonial.role}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section id="inscripcion" class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-4xl md:text-5xl font-serif text-white mb-8">Próximo Grupo: Enero 2025</h2>
      <p class="text-lg text-primary-400 mb-12 max-w-xl mx-auto">
        Plazas limitadas a 8 cirujanos por grupo para garantizar máximo aprovechamiento.
      </p>
      <Button href="https://wa.me/5571999999999" variant="primary" size="lg">
        Hablar con el Equipo
      </Button>
    </div>
  </section>
</BaseLayout>
