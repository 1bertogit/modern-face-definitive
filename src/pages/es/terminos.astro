---
import BaseLayout from '@layouts/BaseLayout.astro';

const keywords = [
  'términos de uso Face Moderna',
  'condiciones de uso sitio',
  'Dr Robério Brandão legal',
];

const schema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Términos de Uso',
  description: 'Términos de uso del sitio Face Moderna® - Dr. Robério Brandão',
};
---

<BaseLayout
  title="Términos de Uso"
  description="Términos y condiciones de uso del sitio Face Moderna® - Dr. Robério Brandão."
  schema={schema}
  keywords={keywords}
  lang="es"
