---
import BaseLayout from '@layouts/BaseLayout.astro';

const estadisticas = [
  { numero: '1.500+', label: 'Cirugías faciales totales', periodo: '1995-2024' },
  { numero: '212+', label: 'Casos Endomidface documentados', periodo: '2019-2024' },
  { numero: '0', label: 'Lesiones nerviosas permanentes', periodo: 'Serie completa' },
  { numero: '<3%', label: 'Tasa de revisión', periodo: 'Por debajo de la literatura' },
];

const indicadores = [
  {
    nombre: 'Satisfacción del paciente',
    valor: '>95%',
    desc: 'En encuesta de follow-up estructurado',
  },
  { nombre: 'Complicaciones mayores', valor: '<1%', desc: 'Hematomas, infecciones, necrosis' },
  { nombre: 'Follow-up 1 mes', valor: '100%', desc: 'Evaluación postoperatoria inmediata' },
  { nombre: 'Follow-up 1 año+', valor: '60%', desc: 'Acompañamiento de largo plazo' },
];

const metodologia = [
  'Evaluación preoperatoria estandarizada con SPE-M',
  'Documentación fotográfica en 7 incidencias',
  'Registro detallado de cada procedimiento',
  'Follow-up estructurado en múltiples puntos',
  'Evaluación de satisfacción del paciente',
  'Análisis sistemático de complicaciones',
];
---

<BaseLayout
  title="Estudios Clínicos | Biblioteca"
  description="Análisis de casos, estadísticas y resultados documentados de la metodología Face Moderna."
  lang="es"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/es" class="hover:text-white">Inicio</a></li><li><span>/</span></li><li>
            <a href="/es/biblioteca" class="hover:text-white">Biblioteca</a>
          </li><li><span>/</span></li><li class="text-white">Estudios Clínicos</li>
        </ol>
      </nav>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Estudios Clínicos
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Análisis de casos, estadísticas y resultados documentados
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">
        Números de la Casuística
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {
          estadisticas.map((e) => (
            <div class="text-center p-6 bg-white border border-gray-100">
              <p class="text-3xl md:text-4xl font-serif text-accent-600 mb-2">{e.numero}</p>
              <p class="text-sm text-primary-900 font-medium mb-1">{e.label}</p>
              <p class="text-xs text-warmGray">{e.periodo}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-accent-600">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <p class="text-8xl font-serif text-white mb-4">0</p>
      <h2 class="text-xl text-white font-medium mb-4">Lesiones Nerviosas Permanentes</h2>
      <p class="text-white/80">
        En 212+ casos documentados de Endomidface, no hay registro de ninguna lesión nerviosa
        permanente. Este número no es accidente — es resultado de metodología que prioriza la
        seguridad.
      </p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">Indicadores de Calidad</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          indicadores.map((i) => (
            <div class="flex items-center justify-between p-4 bg-ivory border border-gray-100">
              <div>
                <>
                  <p class="font-medium text-primary-900">{i.nombre}</p>
                  <p class="text-xs text-warmGray">{i.desc}</p>
                </>
              </div>
              <span class="text-xl font-serif text-green-600">{i.valor}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">Metodología de Registro</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          metodologia.map((m) => (
            <div class="flex items-center gap-3 p-4 bg-white border border-gray-100">
              <>
                <span class="material-symbols-outlined text-accent-600">check_circle</span>
                <span class="text-warmGray">{m}</span>
              </>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-6">Acceso a Estudios Completos</h2>
      <p class="text-primary-300 mb-8">
        Análisis detallados de casos y estadísticas completas disponibles para alumnos de los
        programas.
      </p>
      <a
        href="/es/educacion"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
        >Ver Programas</a
      >
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/es/biblioteca/publicaciones" class="text-sm text-accent-600">← Publicaciones</a>
      <a href="/es/biblioteca/infograficos" class="text-sm text-accent-600">Infografías →</a>
    </div>
  </section>
</BaseLayout>
