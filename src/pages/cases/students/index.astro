  },
  {
    name: 'Dr. Fernando L.',
    city: 'Curitiba, PR',
    specialty: 'Plastic Surgeon',
    surgeries: '30+ Modern Face',
    testimonial:
      'The difference lies in applied anatomy. Understanding aging in layers and treating each patient in a personalized way revolutionized my surgical practice.',
    image: '/images/testimonials/avatars/alumni-avatar-5.png',
    graduationYear: '2021',
    featured: false,
  },
  {
    name: 'Dr. Patrícia A.',
