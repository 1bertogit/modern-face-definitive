---
import BaseLayout from '@layouts/BaseLayout.astro';
import { casesContent, getCasesSchema } from '@lib/content/cases';

const locale = 'en';
const content = casesContent[locale];
const schema = getCasesSchema(locale);

const keywords = [
  'Face Moderna student cases',
  'technique reproducibility',
  'trained surgeons',
  'methodology results',
  'surgeon testimonials',
  'Face Moderna alumni gallery',
];

// Alumni testimonials
