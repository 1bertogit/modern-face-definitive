---
import BaseLayout from '@layouts/BaseLayout.astro';

const presentations = [
  {
    title: 'Endomidface by Direct Vision: A New Approach',
    event: 'Brazilian Congress of Plastic Surgery',
    year: 2023,
  },
  {
    title: 'Deep Neck without Gland Resection: Results from 180 Cases',
    event: 'Facial Surgery Conference',
    year: 2023,
  },
  {
    title: 'Modern Face®: Philosophy and Technique',
    event: 'Facial Rejuvenation Symposium',
    year: 2024,
  },
];

const inProgress = [
  'Case series: Endomidface in 212 patients',
  'Comparative analysis: Direct vision vs. endoscopy',
  'Retrospective study: Complications and learning curve',
];
---

<BaseLayout
  title="Scientific Publications | Library"
  description="Scientific publications, congress presentations and academic contributions by Dr. Robério Brandão."
  lang="en"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/en" class="hover:text-white">Home</a></li><li><span>/</span></li><li>
            <a href="/library" class="hover:text-white">Library</a>
          </li><li><span>/</span></li><li class="text-white">Publications</li>
        </ol>
      </nav>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Scientific Publications
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Articles, congress presentations and academic contributions
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8">Congress Presentations</h2>
      <div class="space-y-4">
        {
          presentations.map((a) => (
            <div class="p-6 bg-white border border-gray-100">
              <div class="flex items-start justify-between">
                <>
                  <div>
                    <>
                      <h3 class="font-medium text-primary-900 mb-1">{a.title}</h3>
                      <p class="text-sm text-warmGray">{a.event}</p>
                    </>
                  </div>
                  <span class="text-accent-600 font-medium">{a.year}</span>
                </>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8">In Preparation</h2>
      <p class="text-warmGray mb-6">
        Articles in development for publication in scientific journals:
      </p>
      <div class="space-y-3">
        {
          inProgress.map((p) => (
            <div class="flex items-center gap-3 p-4 bg-ivory border border-gray-100">
              <>
                <span class="material-symbols-outlined text-amber-500">edit_note</span>
                <span class="text-warmGray">{p}</span>
              </>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-6">Commitment to Evidence</h2>
      <p class="text-primary-300 leading-relaxed">
        We believe innovative techniques need to be validated by data. That's why we maintain
        rigorous documentation of all cases and work to publish our results in recognized scientific
        venues.
      </p>
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/library/ebooks" class="text-sm text-accent-600">← E-books</a>
      <a href="/library/clinical-studies" class="text-sm text-accent-600">Clinical Studies →</a>
    </div>
  </section>
</BaseLayout>
