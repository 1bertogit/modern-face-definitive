---
import BaseLayout from '@layouts/BaseLayout.astro';

const ebooks = [
  {
    title: 'Endomidface by Direct Vision Fundamentals',
    desc: 'Complete guide on the technique that revolutionized middle third rejuvenation. From philosophy to execution.',
    pages: 87,
    chapters: 12,
    access: 'Students',
    featured: true,
  },
  {
    title: 'Deep Neck: The Conservative Approach',
    desc: 'Why not remove the gland? Anatomy, technique and results of the structure-preserving approach.',
    pages: 64,
    chapters: 8,
    access: 'Students',
    featured: false,
  },
  {
    title: 'Applied Anatomy for Facial Surgery',
    desc: 'Visual atlas of spaces, planes and critical structures. Essential reference for the facial surgeon.',
    pages: 120,
    chapters: 15,
    access: 'Students',
    featured: true,
  },
];

const upcoming = [
  'Evolutionary Browlift: From Endoscope to Direct Vision',
  'SPE-M in Practice: Pre-Operative Assessment Guide',
  'Modern Face® Philosophy: Principles and Applications',
];
---

<BaseLayout
  title="E-books | Library"
  description="E-books on facial surgery: Endomidface, Deep Neck, applied anatomy and Modern Face philosophy."
  lang="en"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/en" class="hover:text-white">Home</a></li><li><span>/</span></li><li>
            <a href="/library" class="hover:text-white">Library</a>
          </li><li><span>/</span></li><li class="text-white">E-books</li>
        </ol>
      </nav>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">E-books</h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Complete and in-depth guides on Modern Face® techniques and philosophy
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="space-y-6">
        {
          ebooks.map((e) => (
            <div
              class={`p-6 bg-white border ${e.featured ? 'border-accent-600' : 'border-gray-100'}`}
            >
              {e.featured && (
                <span class="inline-block px-2 py-1 bg-accent-600 text-white text-xs uppercase tracking-wider mb-4">
                  Featured
                </span>
              )}
              <h3 class="font-serif text-xl text-primary-900 mb-2">{e.title}</h3>
              <p class="text-warmGray mb-4">{e.desc}</p>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-4 text-sm text-softGray">
                  <>
                    <span>{e.pages} pages</span>
                    <span>•</span>
                    <span>{e.chapters} chapters</span>
                  </>
                </div>
                <span
                  class={`text-xs px-3 py-1 ${e.access === 'Public' ? 'bg-green-100 text-green-700' : 'bg-accent-100 text-accent-700'}`}
                >
                  {e.access}
                </span>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">In Development</h2>
      <div class="space-y-3">
        {
          upcoming.map((t) => (
            <div class="flex items-center gap-3 p-4 bg-ivory border border-gray-100">
              <>
                <span class="material-symbols-outlined text-primary-400">hourglass_empty</span>
                <span class="text-warmGray">{t}</span>
              </>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-6">E-book Access</h2>
      <p class="text-primary-300 mb-8">All e-books are available to training program students.</p>
      <a
        href="/education"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
        >View Programs</a
      >
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/library" class="text-sm text-accent-600">← Library</a>
      <a href="/library/publications" class="text-sm text-accent-600">Publications →</a>
    </div>
  </section>
</BaseLayout>
