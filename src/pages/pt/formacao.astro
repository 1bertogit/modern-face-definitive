---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/ui/Button.astro';

const keywords = [
  'curso Face Moderna',
  'formação cirurgia facial',
  'curso Endomidface',
  'treinamento lifting facial',
  'Dr Robério Brandão curso',
];

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Course',
  name: 'Formação Face Moderna®',
  description: 'Curso presencial intensivo de 3 dias para dominar as técnicas da Face Moderna®',
  provider: {
    '@type': 'Person',
    name: 'Dr. Robério Brandão',
  },
};

const modules = [
  {
    day: 'Dia 1',
    title: 'Fundamentos e Anatomia',
    topics: [
      'Anatomia aplicada: SMAS, ligamentos e espaços',
      'GPS Tátil: treinamento de sensibilidade',
      'Demonstração cirúrgica em cadáver',
      'Planejamento cirúrgico personalizado',
    ],
  },
  {
    day: 'Dia 2',
    title: 'Técnicas em Ação',
    topics: [
      'Endomidface por Visão Direta (hands-on)',
      'Browlift Evolutivo',
      'Deep Neck sem remoção glandular',
      'Casos complexos e variantes anatômicas',
    ],
  },
  {
    day: 'Dia 3',
    title: 'Integração e Mentoria',
    topics: [
      'Cirurgia ao vivo com discussão',
      'Complicações e como evitá-las',
      'Pós-operatório acelerado',
      'Mentoria continuada: próximos passos',
    ],
  },
];

const testimonials = [
  {
    quote:
      'Depois de 10 anos fazendo lifting tradicional, o curso mudou completamente minha abordagem. Já operei 15 casos com a técnica e os resultados são consistentes.',
    author: 'Dr. Carlos M.',
    role: 'São Paulo, SP',
  },
  {
    quote:
      'O GPS Tátil é um game changer. Nunca mais senti medo do plano profundo. A segurança que tenho hoje é incomparável.',
    author: 'Dra. Amanda L.',
    role: 'Rio de Janeiro, RJ',
  },
];
---

<BaseLayout
  title="Formação Face Moderna®"
  description="Curso presencial intensivo de 3 dias para dominar as técnicas da Face Moderna®. Aprenda com Dr. Robério Brandão."
  schema={schema}
  keywords={keywords}
>
  <!-- Hero -->
  <section class="py-32 bg-ivory">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
            Formação Presencial
          </p>
          <h1 class="text-4xl md:text-5xl font-serif text-primary-900 leading-tight mb-6">
            Domine em 30 Casos,<br />Não em 10 Anos.
          </h1>
          <p class="text-lg text-warmGray leading-relaxed mb-8">
            Curso intensivo de 3 dias com teoria, hands-on em cadáver e cirurgia ao vivo. Saia
            operando com segurança no plano profundo.
          </p>

          <div class="flex flex-wrap gap-8 py-6 border-y border-gray-200 mb-8">
            <div class="text-center">
              <p class="text-3xl font-normal text-primary-900 font-serif">3 Dias</p>
              <p class="text-[10px] text-softGray uppercase tracking-[0.2em] font-light">Duração</p>
            </div>
            <div class="text-center">
              <p class="text-3xl font-normal text-primary-900 font-serif">8</p>
              <p class="text-[10px] text-softGray uppercase tracking-[0.2em] font-light">
                Vagas/Turma
              </p>
            </div>
            <div class="text-center">
              <p class="text-3xl font-normal text-primary-900 font-serif">100%</p>
              <p class="text-[10px] text-softGray uppercase tracking-[0.2em] font-light">Prático</p>
            </div>
          </div>

          <Button href="#inscricao" variant="primary" size="lg"> Garantir Minha Vaga </Button>
        </div>

        <div class="relative">
          <img
            src="/images/techniques/formacao-hero.png"
            alt="Curso de Formação Avançada Face Moderna - Dr. Robério Brandão"
            class="rounded-lg desaturated-img"
            width="800"
            height="600"
            loading="eager"
            fetchpriority="high"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Programa -->
  <section class="py-32 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
          Programa
        </h2>
        <h3 class="text-4xl md:text-5xl font-serif text-primary-900">O Que Você Vai Aprender</h3>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          modules.map((module) => (
            <div class="bg-ivory p-8 rounded-lg border border-gray-100">
              <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-2">
                {module.day}
              </p>
              <h4 class="text-xl font-serif font-normal text-primary-900 mb-6">{module.title}</h4>
              <ul class="space-y-3">
                {module.topics.map((topic) => (
                  <li class="flex items-start gap-3">
                    <span class="material-symbols-outlined text-accent-600 text-sm mt-1">
                      arrow_right
                    </span>
                    <span class="text-warmGray text-sm">{topic}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Depoimentos -->
  <section class="py-32 bg-ivory">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
          Depoimentos
        </h2>
        <h3 class="text-4xl font-serif text-primary-900">O Que Dizem os Alunos</h3>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          testimonials.map((testimonial) => (
            <div class="bg-white p-8 rounded-lg border border-gray-100">
              <span class="material-symbols-outlined text-3xl text-accent-600 mb-4">
                format_quote
              </span>
              <p class="text-warmGray leading-relaxed mb-6 italic">"{testimonial.quote}"</p>
              <div>
                <p class="font-medium text-primary-900 text-sm">{testimonial.author}</p>
                <p class="text-xs text-softGray font-light">{testimonial.role}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section id="inscricao" class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-4xl md:text-5xl font-serif text-white mb-8">Próxima Turma: Janeiro 2025</h2>
      <p class="text-lg text-primary-400 mb-12 max-w-xl mx-auto">
        Vagas limitadas a 8 cirurgiões por turma para garantir máximo aproveitamento.
      </p>
      <Button href="https://wa.me/5571999999999" variant="primary" size="lg">
        Falar com a Equipe
      </Button>
    </div>
  </section>
</BaseLayout>
