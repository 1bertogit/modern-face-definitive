---
import BaseLayout from '@layouts/BaseLayout.astro';
import { contactContent, getContactSchema } from '@lib/content/contact';
import { WHATSAPP_CONFIG, getWhatsAppUrl } from '@lib/form';

const locale = 'pt';
const content = contactContent[locale];
const schema = getContactSchema(locale);

const whatsappClinic = getWhatsAppUrl('clinic', locale);
const whatsappCourses = WHATSAPP_CONFIG.courses.url;
const web3formsKey = import.meta.env.PUBLIC_WEB3FORMS_KEY || '';
---

<BaseLayout
  title={content.meta.title}
  description={content.meta.description}
  keywords={content.meta.keywords}
  schema={schema}
>
  <!-- Hero -->
  <section class="py-24 bg-ivory">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
        {content.hero.subtitle}
      </p>
      <h1 class="text-4xl md:text-5xl font-serif text-primary-900 mb-6">
        {content.hero.title}
      </h1>
      <p class="text-lg text-warmGray max-w-2xl mx-auto mb-8">
        {content.hero.description}
      </p>

      <!-- Quick Contact Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={whatsappClinic}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-3 bg-green-600 text-white py-4 px-8 rounded-lg font-medium hover:bg-green-700 transition-colors duration-300"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
            ></path>
          </svg>
          WhatsApp Clínica
        </a>
        <a
          href={whatsappCourses}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-3 bg-accent-600 text-white py-4 px-8 rounded-lg font-medium hover:bg-accent-700 transition-colors duration-300"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
            ></path>
          </svg>
          Cursos e Formação
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-serif text-primary-900 mb-8">{content.form.title}</h2>

          <form
            id="contact-form"
            class="space-y-6"
            action="https://api.web3forms.com/submit"
            method="POST"
          >
            <!-- Web3Forms Access Key -->
            <input type="hidden" name="access_key" value={web3formsKey} />
            <input type="hidden" name="subject" value="Nova mensagem do site Dr. Robério Brandão" />
            <input type="hidden" name="from_name" value="Site Dr. Robério Brandão" />

            <!-- Honeypot Spam Protection -->
            <input type="checkbox" name="botcheck" class="hidden" style="display:none" />

            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-primary-900 mb-2">
                {content.form.name.label}
                <span class="text-accent-600">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder={content.form.name.placeholder}
                class="w-full px-4 py-3 border border-softGray rounded-lg focus:ring-2 focus:ring-accent-600 focus:border-transparent transition-colors"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-primary-900 mb-2">
                {content.form.email.label}
                <span class="text-accent-600">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder={content.form.email.placeholder}
                class="w-full px-4 py-3 border border-softGray rounded-lg focus:ring-2 focus:ring-accent-600 focus:border-transparent transition-colors"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-medium text-primary-900 mb-2">
                {content.form.phone.label}
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                placeholder={content.form.phone.placeholder}
                class="w-full px-4 py-3 border border-softGray rounded-lg focus:ring-2 focus:ring-accent-600 focus:border-transparent transition-colors"
              />
            </div>

            <!-- Subject -->
            <div>
              <label for="assunto" class="block text-sm font-medium text-primary-900 mb-2">
                {content.form.subject.label}
                <span class="text-accent-600">*</span>
              </label>
              <select
                id="assunto"
                name="assunto"
                required
                class="w-full px-4 py-3 border border-softGray rounded-lg focus:ring-2 focus:ring-accent-600 focus:border-transparent transition-colors bg-white"
              >
                <option value="">{content.form.subject.placeholder}</option>
                {
                  content.form.subject.options.map((option) => (
                    <option value={option}>{option}</option>
                  ))
                }
              </select>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-medium text-primary-900 mb-2">
                {content.form.message.label}
                <span class="text-accent-600">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                placeholder={content.form.message.placeholder}
                class="w-full px-4 py-3 border border-softGray rounded-lg focus:ring-2 focus:ring-accent-600 focus:border-transparent transition-colors resize-none"
              ></textarea>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full bg-accent-600 text-white py-4 px-8 rounded-lg font-medium hover:bg-accent-700 transition-colors duration-300 focus:ring-2 focus:ring-accent-600 focus:ring-offset-2"
            >
              {content.form.submit}
            </button>

            <!-- Status Messages -->
            <div id="form-status" class="hidden">
              <p id="form-success" class="hidden text-green-600 text-sm p-4 bg-green-50 rounded-lg">
                {content.form.success}
              </p>
              <p id="form-error" class="hidden text-red-600 text-sm p-4 bg-red-50 rounded-lg">
                {content.form.error}
              </p>
            </div>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="lg:pl-8">
          <h2 class="text-2xl font-serif text-primary-900 mb-8">{content.info.title}</h2>

          <div class="space-y-8">
            <!-- Address -->
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-5 h-5 text-accent-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
