---
import BaseLayout from '@layouts/BaseLayout.astro';

const keywords = [
  'curso Deep Neck',
  'contorno cervical cirúrgico',
  'plastia platisma',
  'lipectomia cervical',
  'glândula submandibular',
  'mentoria pescoço lifting',
];

const modulos = [
  { num: '01', titulo: 'Anatomia Cervical Aplicada', desc: 'Estruturas, planos e zonas de risco' },
  { num: '02', titulo: 'Glândula Submandibular', desc: 'Manejo conservador sem ressecção' },
  { num: '03', titulo: 'Lipectomia Precisa', desc: 'Remoção seletiva de gordura profunda' },
  {
    num: '04',
    titulo: 'Plastia Muscular Cervical',
    desc: 'Platismorrafia e técnicas de sustentação',
  },
  { num: '05', titulo: 'Casos Complexos', desc: 'Pescoços difíceis e revisões' },
  { num: '06', titulo: 'Integração Midface-Neck', desc: 'Abordagem harmônica da face completa' },
];

const mentoria = [
  '2 meses de acompanhamento estruturado',
  'Encontros semanais em grupo',
  'Análise de casos complexos',
  'Feedback direto do Dr. Robério',
  'Acesso ao grupo exclusivo',
];

const diferenciais = [
  { titulo: 'Sem Ressecção Glandular', desc: 'Tratamento da glândula submandibular sem remoção' },
  { titulo: 'Lipectomia Precisa', desc: 'Remoção seletiva, não agressiva' },
  { titulo: 'Plastia Muscular', desc: 'Técnicas avançadas de sustentação' },
  { titulo: 'Contorno Elegante', desc: 'Mandíbula e pescoço em harmonia' },
];
---

<BaseLayout
  title="Deep Neck Mastery | Curso + Mentoria"
  description="Curso completo de Deep Neck com 2 meses de mentoria. Domine o contorno cervical e mandibular."
  keywords={keywords}
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/pt" class="hover:text-white">Home</a></li>
          <li><span>/</span></li>
          <li><a href="/pt/educacao" class="hover:text-white">Educação</a></li>
          <li><span>/</span></li>
          <li class="text-white">Deep Neck</li>
        </ol>
      </nav>
      <span
        class="inline-block px-4 py-1 bg-accent-600 text-white text-xs uppercase tracking-wider mb-6"
      >
        Programa Núcleo
      </span>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Deep Neck Mastery
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Curso online completo + 2 meses de mentoria estruturada. Especialização avançada em contorno
        cervical e mandibular.
      </p>
    </div>
  </section>

  <section class="py-8 bg-accent-600">
    <div class="max-w-4xl mx-auto px-4 flex flex-wrap items-center justify-center gap-8 text-white">
      <div class="text-center">
        <p class="text-sm opacity-70">Investimento</p>
        <p class="text-3xl font-serif">R$ 9.000</p>
      </div>
      <div class="text-center">
        <p class="text-sm opacity-70">Valor Original</p>
        <p class="text-xl line-through opacity-50">R$ 18.000</p>
      </div>
      <div class="text-center">
        <p class="text-sm opacity-70">Economia</p>
        <p class="text-xl text-green-300">R$ 9.000</p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">O Programa</h2>
      <div class="prose prose-lg max-w-none text-warmGray">
        <p class="drop-cap">
          O Deep Neck Mastery é o programa de especialização avançada em contorno cervical e
          mandibular. Indicado para cirurgiões que já dominam o básico e buscam refinamento máximo,
          segurança técnica e previsibilidade em uma das regiões mais desafiadoras da cirurgia
          facial.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">Conteúdo do Curso</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          modulos.map((m) => (
            <div class="flex items-start gap-4 p-6 bg-ivory border border-gray-100">
              <span class="text-3xl font-serif text-accent-600/30">{m.num}</span>
              <div>
                <h3 class="font-serif text-primary-900 mb-1">{m.titulo}</h3>
                <p class="text-sm text-warmGray">{m.desc}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-white mb-8 text-center">Mentoria Incluída</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          mentoria.map((item) => (
            <div class="flex items-center gap-3 p-4 bg-white/10">
              <span class="material-symbols-outlined text-accent-400">check_circle</span>
              <span class="text-white">{item}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">Foco Técnico</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          diferenciais.map((d) => (
            <div class="p-6 bg-white border border-gray-100">
              <h3 class="font-medium text-primary-900 mb-2">{d.titulo}</h3>
              <p class="text-sm text-warmGray">{d.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-accent-600">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-serif text-white mb-4">Pronto para Dominar o Pescoço?</h2>
      <p class="text-white/80 mb-8">
        Contorno mandibular nítido e elegante, inclusive em casos complexos
      </p>
      <a
        href="https://wa.me/5531999999999"
        target="_blank"
        class="inline-block px-8 py-4 bg-white text-primary-900 text-sm uppercase tracking-[0.15em] hover:bg-gray-100 transition-colors"
      >
        Garantir Minha Vaga
      </a>
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a
        href="/pt/educacao/programas-nucleo/endomidface-visao-direta"
        class="text-sm text-accent-600">← ENDOMIDFACE®</a
      >
      <a href="/pt/educacao/formacao-avancada" class="text-sm text-accent-600"
        >Formação Avançada →</a
      >
    </div>
  </section>
</BaseLayout>
