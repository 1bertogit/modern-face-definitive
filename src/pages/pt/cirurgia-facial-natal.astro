---
import BaseLayout from '@layouts/BaseLayout.astro';
import FAQAccordion from '@components/islands/FAQAccordion';
import SchemaFAQ from '@components/seo/SchemaFAQ.astro';

/**
 * Landing Page SEO Local - Cirurgião Plástico em Natal/RN
 * Otimizada para busca local e turismo médico
 */

const keywords = [
  // Alta Intenção (Fundo de Funil)
  'cirurgião plástico em Natal',
  'melhor cirurgião plástico Natal RN',
  'clínica de cirurgia plástica em Natal',
  'Dr Robério Brandão',
  'cirurgião plástico Petrópolis Natal',
  'cirurgião plástico Tirol Natal',
  'consulta cirurgião plástico Natal',
  'cirurgia plástica segura Natal',
  // Autoridade em Face
  'Deep Plane Facelift Natal',
  'lifting facial em Natal',
  'rejuvenescimento facial cirúrgico Natal',
  'ritidoplastia Natal',
  'ENDOMIDFACE Natal',
  'Deep Neck cirurgia pescoço Natal',
  'Browlift Natal',
  'cirurgia de pálpebras Natal',
