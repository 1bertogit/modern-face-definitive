---
import BaseLayout from '@layouts/BaseLayout.astro';

const keywords = [
  'termos de uso Face Moderna',
  'condições de uso site',
  'Dr Robério Brandão legal',
];

const schema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Termos de Uso',
  description: 'Termos de uso do site Face Moderna® - Dr. Robério Brandão',
};
---

<BaseLayout
  title="Termos de Uso"
  description="Termos e condições de uso do site Face Moderna® - Dr. Robério Brandão."
  schema={schema}
  keywords={keywords}
>
  <!-- Hero -->
  <section class="py-32 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">Legal</p>
      <h1 class="text-5xl md:text-6xl font-serif text-primary-900 leading-tight mb-6">
        Termos de Uso
      </h1>
      <p class="text-xl text-warmGray leading-relaxed max-w-2xl mx-auto">
        Condições de acesso e utilização do site Face Moderna®.
      </p>
      <p class="text-sm text-softGray mt-6">
        Última atualização: {
          new Date().toLocaleDateString('pt-BR', { year: 'numeric', month: 'long', day: 'numeric' })
        }
      </p>
    </div>
  </section>

  <!-- Content -->
  <section class="py-32 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <div class="prose prose-lg max-w-none text-warmGray">
        <p class="drop-cap">
