---
import BaseLayout from '@layouts/BaseLayout.astro';

const categorias = [
  {
    titulo: 'E-books',
    desc: 'Guias completos e aprofundados sobre técnicas e filosofia da Face Moderna',
    href: '/pt/biblioteca/ebooks',
    icone: 'menu_book',
    qtd: '3 títulos',
  },
  {
    titulo: 'Publicações Científicas',
    desc: 'Artigos, apresentações em congressos e contribuições acadêmicas',
    href: '/pt/biblioteca/publicacoes',
    icone: 'science',
    qtd: 'Em breve',
  },
  {
    titulo: 'Estudos Clínicos',
    desc: 'Análises de casos, estatísticas e resultados documentados',
    href: '/pt/biblioteca/estudos-clinicos',
    icone: 'analytics',
    qtd: '212+ casos',
  },
  {
    titulo: 'Infográficos',
    desc: 'Visualizações didáticas de anatomia, técnicas e protocolos',
    href: '/pt/biblioteca/infograficos',
    icone: 'image',
    qtd: '12 materiais',
  },
  {
    titulo: 'Guias Práticos',
    desc: 'Protocolos, checklists e materiais de referência rápida',
    href: '/pt/biblioteca/guias-praticos',
    icone: 'description',
    qtd: '8 guias',
  },
];

const destaques = [
  { titulo: 'E-book: Fundamentos do Endomidface', tipo: 'E-book', acesso: 'Alunos' },
  { titulo: 'Infográfico: Anatomia do Terço Médio', tipo: 'Infográfico', acesso: 'Público' },
  { titulo: 'Guia: Checklist Pré-Operatório', tipo: 'Guia Prático', acesso: 'Alunos' },
];
---

<BaseLayout
  title="Biblioteca | Recursos Educacionais"
  description="Biblioteca de recursos educacionais: e-books, publicações científicas, estudos clínicos, infográficos e guias práticos."
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
        Modern Face Institute
      </p>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">Biblioteca</h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Recursos educacionais para aprofundar seu conhecimento em cirurgia facial e na metodologia
        Face Moderna®
      </p>
    </div>
  </section>

  <section class="py-12 bg-accent-600">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <p class="text-xl font-serif text-white italic">
        "O conhecimento que não é compartilhado morre conosco. Aqui, ele vive e se multiplica."
      </p>
    </div>
  </section>

  <!-- Categorias -->
  <section class="py-20 bg-ivory">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">Explore por Categoria</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          categorias.map((c) => (
            <a
              href={c.href}
              class="group p-6 bg-white border border-gray-100 hover:border-accent-600 transition-all"
            >
              <div class="flex items-start justify-between mb-4">
                <span class="material-symbols-outlined text-accent-600 text-3xl">{c.icone}</span>
                <span class="text-xs px-2 py-1 bg-gray-100 text-softGray">{c.qtd}</span>
              </div>
              <h3 class="font-serif text-xl text-primary-900 group-hover:text-accent-600 transition-colors mb-2">
                {c.titulo}
              </h3>
              <p class="text-sm text-warmGray">{c.desc}</p>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Destaques -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">Materiais em Destaque</h2>
      <div class="space-y-4">
        {
          destaques.map((d) => (
            <div class="flex items-center justify-between p-4 bg-ivory border border-gray-100">
              <div class="flex items-center gap-4">
                <span class="material-symbols-outlined text-accent-600">star</span>
                <div>
                  <h3 class="font-medium text-primary-900">{d.titulo}</h3>
                  <p class="text-xs text-warmGray">{d.tipo}</p>
                </div>
              </div>
              <span
                class={`text-xs px-3 py-1 ${d.acesso === 'Público' ? 'bg-green-100 text-green-700' : 'bg-accent-100 text-accent-700'}`}
              >
                {d.acesso}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Acesso -->
  <section class="py-20 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-white mb-8 text-center">Níveis de Acesso</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="p-6 bg-white/10">
          <div class="flex items-center gap-3 mb-4">
            <span class="material-symbols-outlined text-green-400">lock_open</span>
            <h3 class="font-medium text-white">Conteúdo Público</h3>
          </div>
          <p class="text-primary-300 text-sm mb-4">
            Infográficos introdutórios e materiais de divulgação disponíveis para todos.
          </p>
          <p class="text-xs text-primary-400">Acesse agora mesmo</p>
        </div>
        <div class="p-6 bg-white/10">
          <div class="flex items-center gap-3 mb-4">
            <span class="material-symbols-outlined text-accent-400">school</span>
            <h3 class="font-medium text-white">Conteúdo Exclusivo</h3>
          </div>
          <p class="text-primary-300 text-sm mb-4">
            E-books completos, estudos de caso e guias avançados para alunos dos programas.
          </p>
          <a href="/pt/educacao" class="text-xs text-accent-400 hover:text-accent-300"
            >Ver programas →</a
          >
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-primary-900 mb-6">Acesso Completo à Biblioteca</h2>
      <p class="text-warmGray mb-8">
        Alunos dos programas de formação têm acesso integral a todos os materiais da biblioteca,
        incluindo novos conteúdos conforme são publicados.
      </p>
      <a
        href="/pt/educacao"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
      >
        Ver Programas de Formação
      </a>
    </div>
  </section>
</BaseLayout>
