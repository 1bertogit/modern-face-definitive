---
import BaseLayout from '@layouts/BaseLayout.astro';

const guias = [
  { titulo: 'Checklist Pré-Operatório Completo', tipo: 'Checklist', paginas: 4, acesso: 'Alunos' },
  { titulo: 'Protocolo de Avaliação SPE-M', tipo: 'Protocolo', paginas: 8, acesso: 'Alunos' },
  { titulo: 'Guia de Documentação Fotográfica', tipo: 'Guia', paginas: 12, acesso: 'Alunos' },
  {
    titulo: 'Orientações Pós-Operatórias para Paciente',
    tipo: 'Handout',
    paginas: 2,
    acesso: 'Alunos',
  },
  { titulo: 'Termo de Consentimento Modelo', tipo: 'Documento', paginas: 4, acesso: 'Alunos' },
  { titulo: 'Sequência Operatória Endomidface', tipo: 'Protocolo', paginas: 6, acesso: 'Alunos' },
  { titulo: 'Manejo de Complicações', tipo: 'Guia', paginas: 10, acesso: 'Alunos' },
  { titulo: 'Quick Reference: Anatomia Facial', tipo: 'Referência', paginas: 2, acesso: 'Público' },
];

const formatos = [
  { icone: 'picture_as_pdf', formato: 'PDF', desc: 'Para impressão' },
  { icone: 'edit_document', formato: 'Editável', desc: 'Personalizável' },
  { icone: 'smartphone', formato: 'Mobile', desc: 'Acesso rápido' },
];
---

<BaseLayout
  title="Guias Práticos | Biblioteca"
  description="Protocolos, checklists e materiais de referência rápida para cirurgia facial."
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/pt" class="hover:text-white">Home</a></li>
          <li><span>/</span></li>
          <li><a href="/pt/biblioteca" class="hover:text-white">Biblioteca</a></li>
          <li><span>/</span></li>
          <li class="text-white">Guias Práticos</li>
        </ol>
      </nav>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">Guias Práticos</h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Protocolos, checklists e materiais de referência rápida
      </p>
    </div>
  </section>

  <!-- Formatos -->
  <section class="py-12 bg-accent-600">
    <div class="max-w-4xl mx-auto px-4">
      <div class="flex justify-center gap-8">
        {
          formatos.map((f) => (
            <div class="flex items-center gap-2 text-white">
              <span class="material-symbols-outlined">{f.icone}</span>
              <div>
                <p class="text-sm font-medium">{f.formato}</p>
                <p class="text-xs text-white/70">{f.desc}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Lista -->
  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="space-y-4">
        {
          guias.map((g) => (
            <div class="flex items-center justify-between p-4 bg-white border border-gray-100">
              <div class="flex items-center gap-4">
                <span class="material-symbols-outlined text-accent-600">description</span>
                <div>
                  <h3 class="font-medium text-primary-900">{g.titulo}</h3>
                  <p class="text-xs text-warmGray">
                    {g.tipo} • {g.paginas} páginas
                  </p>
                </div>
              </div>
              <span
                class={`text-xs px-3 py-1 ${g.acesso === 'Público' ? 'bg-green-100 text-green-700' : 'bg-accent-100 text-accent-700'}`}
              >
                {g.acesso}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Uso -->
  <section class="py-20 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-primary-900 mb-6">Materiais Prontos para Uso</h2>
      <p class="text-warmGray mb-8">
        Todos os guias foram desenvolvidos para uso imediato na prática clínica. Podem ser
        impressos, adaptados à sua realidade e compartilhados com sua equipe.
      </p>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-6">Acesso aos Guias</h2>
      <p class="text-primary-300 mb-8">
        Todos os guias práticos estão disponíveis para alunos dos programas de formação.
      </p>
      <a
        href="/pt/educacao"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
      >
        Ver Programas
      </a>
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/pt/biblioteca/infograficos" class="text-sm text-accent-600">← Infográficos</a>
      <a href="/pt/biblioteca" class="text-sm text-accent-600">Biblioteca →</a>
    </div>
  </section>
</BaseLayout>
