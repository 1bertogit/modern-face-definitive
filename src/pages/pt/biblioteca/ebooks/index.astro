---
import BaseLayout from '@layouts/BaseLayout.astro';

const ebooks = [
  {
    titulo: 'Fundamentos do Endomidface por Visão Direta',
    desc: 'Guia completo sobre a técnica que revolucionou o rejuvenescimento do terço médio facial. Da filosofia à execução.',
    paginas: 87,
    capitulos: 12,
    acesso: 'Alunos',
    destaque: true,
  },
  {
    titulo: 'Deep Neck: A Abordagem Conservadora',
    desc: 'Por que não remover a glândula? Anatomia, técnica e resultados da abordagem que preserva estruturas.',
    paginas: 64,
    capitulos: 8,
    acesso: 'Alunos',
    destaque: false,
  },
  {
    titulo: 'Anatomia Aplicada à Cirurgia Facial',
    desc: 'Atlas visual dos espaços, planos e estruturas críticas. Referência essencial para o cirurgião facial.',
    paginas: 120,
    capitulos: 15,
    acesso: 'Alunos',
    destaque: true,
  },
];

const emBreve = [
  'Frontoplastia Evolutiva: Do Endoscópio à Visão Direta',
  'SPE-M na Prática: Guia de Avaliação Pré-Operatória',
  'Filosofia Face Moderna®: Princípios e Aplicações',
];
---

<BaseLayout
  title="E-books | Biblioteca"
  description="E-books sobre cirurgia facial: Endomidface, Deep Neck, anatomia aplicada e filosofia Face Moderna."
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/pt" class="hover:text-white">Home</a></li>
          <li><span>/</span></li>
          <li><a href="/pt/biblioteca" class="hover:text-white">Biblioteca</a></li>
          <li><span>/</span></li>
          <li class="text-white">E-books</li>
        </ol>
      </nav>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">E-books</h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Guias completos e aprofundados sobre técnicas e filosofia da Face Moderna®
      </p>
    </div>
  </section>

  <!-- Lista -->
  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="space-y-6">
        {
          ebooks.map((e) => (
            <div
              class={`p-6 bg-white border ${e.destaque ? 'border-accent-600' : 'border-gray-100'}`}
            >
              {e.destaque && (
                <span class="inline-block px-2 py-1 bg-accent-600 text-white text-xs uppercase tracking-wider mb-4">
                  Destaque
                </span>
              )}
              <h3 class="font-serif text-xl text-primary-900 mb-2">{e.titulo}</h3>
              <p class="text-warmGray mb-4">{e.desc}</p>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-4 text-sm text-softGray">
                  <span>{e.paginas} páginas</span>
                  <span>•</span>
                  <span>{e.capitulos} capítulos</span>
                </div>
                <span
                  class={`text-xs px-3 py-1 ${e.acesso === 'Público' ? 'bg-green-100 text-green-700' : 'bg-accent-100 text-accent-700'}`}
                >
                  {e.acesso}
                </span>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Em breve -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">Em Desenvolvimento</h2>
      <div class="space-y-3">
        {
          emBreve.map((t) => (
            <div class="flex items-center gap-3 p-4 bg-ivory border border-gray-100">
              <span class="material-symbols-outlined text-primary-400">hourglass_empty</span>
              <span class="text-warmGray">{t}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-6">Acesso aos E-books</h2>
      <p class="text-primary-300 mb-8">
        Todos os e-books estão disponíveis para alunos dos programas de formação.
      </p>
      <a
        href="/pt/educacao"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
      >
        Ver Programas
      </a>
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/pt/biblioteca" class="text-sm text-accent-600">← Biblioteca</a>
      <a href="/pt/biblioteca/publicacoes" class="text-sm text-accent-600">Publicações →</a>
    </div>
  </section>
</BaseLayout>
