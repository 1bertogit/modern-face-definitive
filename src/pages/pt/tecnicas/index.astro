const comparativo = [
  {
    aspecto: 'Nível de Invasividade',
    emf: 'Minimamente Invasiva',
    ponytail: 'Moderadamente Invasiva',
    deepPlane: 'Altamente Invasiva',
  },
  {
    aspecto: 'Segurança Face Injetada',
    emf: 'Segura',
    ponytail: 'Cuidados Especiais',
    deepPlane: 'Contraindicada',
  },
  {
    aspecto: 'Tempo Cirúrgico',
    emf: '90-120 min',
    ponytail: '120-180 min',
    deepPlane: '180-240 min',
  },
  { aspecto: 'Recuperação', emf: '7-10 dias', ponytail: '14-21 dias', deepPlane: '21-30 dias' },
  { aspecto: 'Curva de Aprendizado', emf: 'Moderada', ponytail: 'Moderada', deepPlane: 'Íngreme' },
  { aspecto: 'Taxa de Complicações', emf: '<3%', ponytail: '5-8%', deepPlane: '8-12%' },
