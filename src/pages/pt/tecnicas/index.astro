---
import BaseLayout from '@layouts/BaseLayout.astro';

const keywords = [
  'técnicas cirurgia facial',
  'Face Moderna técnicas',
  'Endomidface',
  'Deep Neck',
  'Browlift evolutivo',
  'rejuvenescimento facial cirúrgico',
  'Dr Robério Brandão técnicas',
];

const schema = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Técnicas Cirúrgicas Face Moderna®',
  description:
    'As técnicas que compõem a metodologia Face Moderna®: Endomidface por Visão Direta, Deep Neck e Browlift Evolutivo.',
  author: {
    '@type': 'Person',
    name: 'Dr. Robério Brandão',
  },
};

const tecnicasPrincipais = [
  {
    href: '/pt/tecnicas/endomidface',
    nome: 'Endomidface por Visão Direta',
    subtitulo: 'Terço Médio da Face',
    descricao:
      'Rejuvenescimento do terço médio sem endoscópio. Visão direta, feedback táctil simultâneo, segurança máxima em faces com bioestimuladores.',
    destaque: '212 casos • 0% lesão nervosa',
    tag: 'Técnica Principal',
  },
  {
    href: '/pt/tecnicas/deep-neck',
    nome: 'Deep Neck Face Moderna',
    subtitulo: 'Pescoço e Região Cervical',
    descricao:
      'Tratamento completo do pescoço SEM remoção da glândula submandibular. Platismorrafia, shaving digástrico, Crevassi lateral.',
    destaque: 'Preservação glandular total',
    tag: 'Técnica Principal',
  },
  {
    href: '/pt/tecnicas/browlift',
    nome: 'Browlift Evolutivo',
    subtitulo: 'Terço Superior e Sobrancelhas',
    descricao:
      'Frontoplastia por visão direta com acesso intracapilar. Portal seguro para o Endomidface. Vetor vertical, resultado natural.',
    destaque: 'Incisão 100% oculta',
    tag: 'Técnica Principal',
  },
];

