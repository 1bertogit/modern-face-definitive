---
import BaseLayout from '@layouts/BaseLayout.astro';

const modules = [
  { num: '01', title: 'Applied Cervical Anatomy', desc: 'Structures, planes and risk zones' },
  { num: '02', title: 'Submandibular Gland', desc: 'Conservative management without resection' },
  { num: '03', title: 'Precise Lipectomy', desc: 'Selective deep fat removal' },
  { num: '04', title: 'Cervical Muscle Plasty', desc: 'Platysmorraphy and suspension techniques' },
  { num: '05', title: 'Complex Cases', desc: 'Difficult necks and revisions' },
  { num: '06', title: 'Midface-Neck Integration', desc: 'Harmonic complete face approach' },
];

const mentorship = [
  '2 months of structured follow-up',
  'Weekly group meetings',
  'Complex case analysis',
  'Direct feedback from Dr. Robério',
  'Exclusive group access',
];

const differentials = [
  { title: 'No Glandular Resection', desc: 'Submandibular gland treatment without removal' },
  { title: 'Precise Lipectomy', desc: 'Selective, non-aggressive removal' },
  { title: 'Muscle Plasty', desc: 'Advanced suspension techniques' },
  { title: 'Elegant Contour', desc: 'Mandible and neck in harmony' },
];
---

<BaseLayout
  title="Deep Neck Mastery | Course + Mentorship"
  description="Complete Deep Neck course with 2 months mentorship. Master cervical and mandibular contour."
  lang="en"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/en" class="hover:text-white">Home</a></li>
          <li><span>/</span></li>
          <li><a href="/education" class="hover:text-white">Education</a></li>
          <li><span>/</span></li>
          <li class="text-white">Deep Neck</li>
        </ol>
      </nav>
      <span
        class="inline-block px-4 py-1 bg-accent-600 text-white text-xs uppercase tracking-wider mb-6"
      >
        Core Program
      </span>
      <h1 class="heading-1-white">
        Deep Neck Mastery
      </h1>
      <p class="body-large-light max-w-2xl mx-auto">
        Complete online course + 2 months structured mentorship. Advanced specialization in cervical
        and mandibular contour.
      </p>
    </div>
  </section>

  <section class="py-8 bg-accent-600">
    <div class="max-w-4xl mx-auto px-4 flex flex-wrap items-center justify-center gap-8 text-white">
      <div class="text-center">
        <p class="text-sm opacity-70">Investment</p>
        <p class="text-3xl font-serif">$1,800</p>
      </div>
      <div class="text-center">
        <p class="text-sm opacity-70">Original Value</p>
        <p class="text-xl line-through opacity-50">$3,600</p>
      </div>
      <div class="text-center">
        <p class="text-sm opacity-70">Savings</p>
        <p class="text-xl text-green-300">$1,800</p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <h2 class="heading-2 mb-8 text-center">The Program</h2>
      <div class="prose prose-lg max-w-none text-warmGray">
        <p class="drop-cap">
          Deep Neck Mastery is the advanced specialization program in cervical and mandibular
          contour. Indicated for surgeons who already master the basics and seek maximum refinement,
          technical safety and predictability in one of the most challenging regions of facial
          surgery.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="heading-2 mb-12 text-center">Course Content</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          modules.map((m) => (
            <div class="flex items-start gap-4 p-6 bg-ivory border border-gray-100">
              <span class="text-3xl font-serif text-accent-600/30">{m.num}</span>
              <div>
                <h3 class="font-serif text-primary-900 mb-1">{m.title}</h3>
                <p class="text-sm text-warmGray">{m.desc}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="heading-2-white mb-8 text-center">Mentorship Included</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          mentorship.map((item) => (
            <div class="flex items-center gap-3 p-4 bg-white/10">
              <span class="material-symbols-outlined text-accent-400">check_circle</span>
              <span class="text-white">{item}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="heading-2 mb-12 text-center">Technical Focus</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          differentials.map((d) => (
            <div class="p-6 bg-white border border-gray-100">
              <h3 class="font-medium text-primary-900 mb-2">{d.title}</h3>
              <p class="text-sm text-warmGray">{d.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-accent-600">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="heading-2-white mb-4">Ready to Master the Neck?</h2>
      <a
        href="https://wa.me/5531999999999"
        target="_blank"
        class="inline-block px-8 py-4 bg-white text-primary-900 text-sm uppercase tracking-[0.15em] hover:bg-gray-100 transition-colors"
      >
        Secure My Spot
      </a>
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/education/core-programs/endomidface-direct-vision" class="text-sm text-accent-600"
        >← ENDOMIDFACE®</a
      >
      <a href="/education/advanced-training" class="text-sm text-accent-600">Advanced Training →</a>
    </div>
  </section>
</BaseLayout>
