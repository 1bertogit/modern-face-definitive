---
import BaseLayout from '@layouts/BaseLayout.astro';

const courses = [
  {
    title: 'Blepharoplasty and Canthopexy',
    desc: 'Advanced techniques for upper and lower eyelids with integrated canthopexy',
    status: 'Coming soon',
    available: false,
  },
  {
    title: 'Browlift / Forehead Lift',
    desc: 'Eyebrow elevation through evolutionary techniques without endoscope',
    status: 'Coming soon',
    available: false,
  },
  {
    title: 'Fibrosed Face',
    desc: 'Surgical management of faces with previous biostimulators and fillers',
    status: 'Coming soon',
    available: false,
  },
  {
    title: 'Complications and Revisions',
    desc: 'Identification, management and correction of facial surgery complications',
    status: 'Coming soon',
    available: false,
  },
  {
    title: 'Planning and Photography',
    desc: 'SPE-M system, photographic documentation and vector planning',
    status: 'Coming soon',
    available: false,
  },
  {
    title: 'OR Setup',
    desc: 'Ideal surgical center configuration, equipment and instruments',
    status: 'Coming soon',
    available: false,
  },
  {
    title: 'Post-Operative Care',
    desc: 'Recovery protocols, dressings and complication management',
    status: 'Coming soon',
    available: false,
  },
];
---

<BaseLayout
  title="Satellite Courses | Complementary Modules"
  description="Complementary specialization modules in specific areas of facial surgery."
  lang="en"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/en" class="hover:text-white">Home</a></li>
          <li><span>/</span></li>
          <li><a href="/education" class="hover:text-white">Education</a></li>
          <li><span>/</span></li>
          <li class="text-white">Satellite Courses</li>
        </ol>
      </nav>
      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
        Complementary Modules
      </p>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Satellite Courses
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Deep dive into specific areas to complement your Modern Face® training
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          courses.map((course) => (
            <div
              class={`p-6 border ${course.available ? 'bg-white border-gray-100 hover:border-accent-600' : 'bg-gray-50 border-gray-200'} transition-all`}
            >
              <div class="flex items-start justify-between mb-4">
                <h3
                  class={`font-serif text-lg ${course.available ? 'text-primary-900' : 'text-softGray'}`}
                >
                  {course.title}
                </h3>
                <span
                  class={`text-xs px-2 py-1 ${course.available ? 'bg-green-600 text-white' : 'bg-gray-300 text-softGray'}`}
                >
                  {course.status}
                </span>
              </div>
              <p class={`text-sm ${course.available ? 'text-warmGray' : 'text-primary-400'}`}>
                {course.desc}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-primary-900 mb-6">Want to Be Notified?</h2>
      <p class="text-warmGray mb-8">
        Satellite courses are under development. Contact us to be notified when they become
        available.
      </p>
      <a
        href="https://wa.me/5531999999999"
        target="_blank"
        class="inline-block px-8 py-4 border-2 border-primary-900 text-primary-900 text-sm uppercase tracking-[0.15em] hover:bg-primary-900 hover:text-white transition-colors"
      >
        Notify Me
      </a>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-primary-900 mb-6">In the Meantime...</h2>
      <p class="text-warmGray mb-8">
        Check out our main programs and start your Modern Face® journey
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/education/core-programs/endomidface-direct-vision"
          class="px-6 py-3 bg-accent-600 text-white text-sm hover:bg-accent-700 transition-colors"
        >
          ENDOMIDFACE®
        </a>
        <a
          href="/education/core-programs/deep-neck-mastery"
          class="px-6 py-3 bg-accent-600 text-white text-sm hover:bg-accent-700 transition-colors"
        >
          Deep Neck
        </a>
        <a
          href="/education/advanced-training"
          class="px-6 py-3 bg-primary-900 text-white text-sm hover:bg-primary-800 transition-colors"
        >
          Advanced Training
        </a>
      </div>
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-center">
      <a href="/education" class="text-sm text-accent-600">← Back to Education</a>
    </div>
  </section>
</BaseLayout>
