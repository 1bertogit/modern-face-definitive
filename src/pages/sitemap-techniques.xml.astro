---
// sitemap-techniques.xml - Surgical Techniques
const siteUrl = 'https://drroberiobrandao.com';
const lastmod = new Date().toISOString().split('T')[0];

// Techniques with translations
const techniques = [
  {
    en: '/techniques',
    pt: '/pt/tecnicas',
    es: '/es/tecnicas',
    priority: 0.9,
    changefreq: 'monthly',
  },
  {
    en: '/techniques/endomidface',
    pt: '/pt/tecnicas/endomidface',
    es: '/es/tecnicas/endomidface',
    priority: 0.95,
    changefreq: 'weekly',
  },
  {
    en: '/techniques/deep-neck',
    pt: '/pt/tecnicas/deep-neck',
    es: '/es/tecnicas/deep-neck',
    priority: 0.9,
    changefreq: 'monthly',
  },
  {
    en: '/techniques/browlift',
    pt: '/pt/tecnicas/browlift',
    es: '/es/tecnicas/browlift',
    priority: 0.85,
    changefreq: 'monthly',
  },
  {
    en: '/techniques/anatomy',
    pt: '/pt/tecnicas/anatomia',
    es: '/es/tecnicas/anatomia',
    priority: 0.7,
    changefreq: 'monthly',
  },
  {
    en: '/techniques/surgical-planning',
    pt: '/pt/tecnicas/planejamento-cirurgico',
    es: '/es/tecnicas/planificacion-quirurgica',
    priority: 0.7,
    changefreq: 'monthly',
  },
];
---

<!--?xml version="1.0" encoding="UTF-8"?-->
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml"
>
  {
    techniques.map((tech) => (
      <>
        {/* English version */}
        <url>
          <loc>
            {siteUrl}
            {tech.en}
          </loc>
          <lastmod>{lastmod}</lastmod>
          <changefreq>{tech.changefreq}</changefreq>
          <priority>{tech.priority}</priority>
          <xhtml:link rel="alternate" hreflang="en" href={`${siteUrl}${tech.en}`} />
          <xhtml:link rel="alternate" hreflang="pt-BR" href={`${siteUrl}${tech.pt}`} />
          <xhtml:link rel="alternate" hreflang="es" href={`${siteUrl}${tech.es}`} />
          <xhtml:link rel="alternate" hreflang="x-default" href={`${siteUrl}${tech.en}`} />
        </url>
        {/* Portuguese version */}
        <url>
          <loc>
            {siteUrl}
            {tech.pt}
          </loc>
          <lastmod>{lastmod}</lastmod>
          <changefreq>{tech.changefreq}</changefreq>
          <priority>{tech.priority}</priority>
          <xhtml:link rel="alternate" hreflang="en" href={`${siteUrl}${tech.en}`} />
          <xhtml:link rel="alternate" hreflang="pt-BR" href={`${siteUrl}${tech.pt}`} />
          <xhtml:link rel="alternate" hreflang="es" href={`${siteUrl}${tech.es}`} />
          <xhtml:link rel="alternate" hreflang="x-default" href={`${siteUrl}${tech.en}`} />
        </url>
        {/* Spanish version */}
        <url>
          <loc>
            {siteUrl}
            {tech.es}
          </loc>
          <lastmod>{lastmod}</lastmod>
          <changefreq>{tech.changefreq}</changefreq>
          <priority>{tech.priority}</priority>
          <xhtml:link rel="alternate" hreflang="en" href={`${siteUrl}${tech.en}`} />
          <xhtml:link rel="alternate" hreflang="pt-BR" href={`${siteUrl}${tech.pt}`} />
          <xhtml:link rel="alternate" hreflang="es" href={`${siteUrl}${tech.es}`} />
          <xhtml:link rel="alternate" hreflang="x-default" href={`${siteUrl}${tech.en}`} />
        </url>
      </>
    ))
  }
</urlset>
