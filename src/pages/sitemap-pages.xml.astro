---
// sitemap-pages.xml - Main Pages (English - Default)
const siteUrl = 'https://drroberiobrandao.com';
const lastmod = new Date().toISOString().split('T')[0];

const pages = [
  // Home - maximum priority
  { url: '/', priority: 1.0, changefreq: 'weekly' },
  
  // Modern Face
  { url: '/modern-face', priority: 0.9, changefreq: 'monthly' },
  { url: '/modern-face/what-is-it', priority: 0.8, changefreq: 'monthly' },
  { url: '/modern-face/philosophy', priority: 0.8, changefreq: 'monthly' },
  { url: '/modern-face/principles', priority: 0.8, changefreq: 'monthly' },
  { url: '/modern-face/why-direct-vision', priority: 0.8, changefreq: 'monthly' },
  { url: '/modern-face/evolution-of-facial-surgery', priority: 0.7, changefreq: 'monthly' },
  { url: '/modern-face/knowledge-sharing', priority: 0.7, changefreq: 'monthly' },
  
  // About
  { url: '/about', priority: 0.8, changefreq: 'monthly' },
  { url: '/about/dr-roberio-brandao', priority: 0.9, changefreq: 'monthly' },
  
  // Contact and FAQ
  { url: '/contact', priority: 0.7, changefreq: 'monthly' },
  { url: '/faq', priority: 0.7, changefreq: 'monthly' },
  
  // Legal
  { url: '/privacy', priority: 0.3, changefreq: 'yearly' },
  { url: '/terms', priority: 0.3, changefreq: 'yearly' },
];
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {pages.map((page) => (
    <url>
      <loc>{siteUrl}{page.url}</loc>
      <lastmod>{lastmod}</lastmod>
      <changefreq>{page.changefreq}</changefreq>
      <priority>{page.priority}</priority>
      <xhtml:link rel="alternate" hreflang="en" href={`${siteUrl}${page.url}`} />
      <xhtml:link rel="alternate" hreflang="pt-BR" href={`${siteUrl}/pt${page.url === '/' ? '' : page.url}`} />
      <xhtml:link rel="alternate" hreflang="es" href={`${siteUrl}/es${page.url === '/' ? '' : page.url}`} />
      <xhtml:link rel="alternate" hreflang="x-default" href={`${siteUrl}${page.url}`} />
    </url>
  ))}
</urlset>
