---
import BaseLayout from '@layouts/BaseLayout.astro';

const capabilities = [
  {
    icon: 'psychology',
    title: 'Planning Assistant',
    desc: 'Suggestions based on SPE-M assessment and similar case history',
  },
  {
    icon: 'edit_document',
    title: 'Assisted Documentation',
    desc: 'Generation of surgical descriptions and structured reports',
  },
  {
    icon: 'school',
    title: 'Virtual Mentor',
    desc: 'Technical question answers based on Modern Face® methodology',
  },
  {
    icon: 'compare',
    title: 'Comparative Analysis',
    desc: 'Case comparison and pattern identification',
  },
  {
    icon: 'checklist',
    title: 'Protocol Verification',
    desc: 'Alerts about critical steps and protocol deviations',
  },
  {
    icon: 'translate',
    title: 'Patient Communication',
    desc: 'Technical term translation to accessible language',
  },
];

const principles = [
  'AI as assistant, never as decision maker',
  'Transparency about limitations',
  'Based exclusively on validated methodology',
  'Privacy and data security',
  'Suggestion auditability',
];
---

<BaseLayout
  title="AI Copilot | Intelligent Assistant"
  description="AI Copilot: artificial intelligence assistant for planning and documentation support in facial surgery."
  lang="en"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/en" class="hover:text-white">Home</a></li><li><span>/</span></li><li>
            <a href="/clinical-technology" class="hover:text-white">Technology</a>
          </li><li><span>/</span></li><li class="text-white">AI Copilot</li>
        </ol>
      </nav>
      <span
        class="inline-block px-4 py-1 bg-amber-500 text-white text-xs uppercase tracking-wider mb-6"
        >In Development</span
      >
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">AI Copilot</h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Artificial intelligence assistant trained in Modern Face® methodology. Planning,
        documentation and decision support.
      </p>
    </div>
  </section>

  <section class="py-12 bg-accent-600">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <p class="text-xl font-serif text-white italic">
        "AI doesn't replace the surgeon. It frees time so they can focus on what really matters:
        thinking and deciding."
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">What is AI Copilot?</h2>
      <div class="prose prose-lg max-w-none text-warmGray">
        <p class="drop-cap">
          AI Copilot is an artificial intelligence assistant developed specifically for facial
          surgery practice following the Modern Face® methodology. It's not generic AI — it's a
          system trained with knowledge accumulated over nearly 20 years of practice and teaching.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">Planned Capabilities</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          capabilities.map((c) => (
            <div class="p-6 bg-ivory border border-gray-100">
              <span class="material-symbols-outlined text-accent-600 text-2xl mb-3 block">
                {c.icon}
              </span>
              <h3 class="font-medium text-primary-900 mb-2">{c.title}</h3>
              <p class="text-sm text-warmGray">{c.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">Development Principles</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          principles.map((p) => (
            <div class="flex items-center gap-3 p-4 bg-white border border-gray-100">
              <>
                <span class="material-symbols-outlined text-accent-600">verified</span>
                <span class="text-warmGray">{p}</span>
              </>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-8">Responsible AI</h2>
      <p class="text-primary-300 leading-relaxed mb-8">
        We develop AI Copilot responsibly. AI is a support tool, never a replacement. All
        suggestions are traceable, explainable and based on validated methodology.
      </p>
      <div class="inline-block p-4 bg-white/10 text-left">
        <p class="text-sm text-primary-400">
          <span class="text-accent-400 font-medium">Important:</span> AI Copilot does not provide diagnoses
          nor replace clinical judgment. It's a support tool for qualified professionals.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-primary-900 mb-6">Priority Access</h2>
      <p class="text-warmGray mb-8">
        Training program students will have early access to AI Copilot as it is developed.
      </p>
      <a
        href="/education"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
        >View Programs</a
      >
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/clinical-technology/faceos/checklists" class="text-sm text-accent-600"
        >← Checklists</a
      >
      <a href="/clinical-technology" class="text-sm text-accent-600">Clinical Technology →</a>
    </div>
  </section>
</BaseLayout>
