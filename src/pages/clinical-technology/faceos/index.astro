---
import BaseLayout from '@layouts/BaseLayout.astro';

const modules = [
  {
    name: 'Digital Records',
    desc: 'Structured documentation for facial surgery',
    href: '/clinical-technology/faceos/records',
  },
  {
    name: 'SPE-M System',
    desc: 'Standardized pre-operative assessment',
    href: '/clinical-technology/faceos/spe-m',
  },
  {
    name: 'Vector Planning',
    desc: 'Direction definition and visualization',
    href: '/clinical-technology/faceos/vector-planning',
  },
  {
    name: 'Checklists',
    desc: 'Step-by-step protocols',
    href: '/clinical-technology/faceos/checklists',
  },
];

const benefits = [
  'Standardization of all clinical documentation',
  'Error reduction through reminders',
  'Complete history for each patient',
  'Database for results analysis',
  'Clear team communication',
  'Teaching and learning support',
];
---

<BaseLayout
  title="FaceOS | Modern Face Operating System"
  description="FaceOS: integrated platform for clinical management, assessment and planning in facial surgery."
  lang="en"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/en" class="hover:text-white">Home</a></li><li><span>/</span></li><li>
            <a href="/clinical-technology" class="hover:text-white">Technology</a>
          </li><li><span>/</span></li><li class="text-white">FaceOS</li>
        </ol>
      </nav>
      <span
        class="inline-block px-4 py-1 bg-amber-500 text-white text-xs uppercase tracking-wider mb-6"
        >In Development</span
      >
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">FaceOS</h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        The Modern Face® Operating System. An integrated platform for clinical management,
        assessment and surgical planning.
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">What is FaceOS?</h2>
      <div class="prose prose-lg max-w-none text-warmGray">
        <p class="drop-cap">
          FaceOS is a digital platform developed specifically for facial surgery practice following
          the Modern Face® methodology. It's not a generic adapted record system — it's a system
          built from scratch with the specific needs of the facial surgeon in mind.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">System Modules</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          modules.map((m) => (
            <a
              href={m.href}
              class="group flex items-start gap-4 p-6 bg-ivory border border-gray-100 hover:border-accent-600 transition-all"
            >
              <span class="material-symbols-outlined text-accent-600 text-2xl flex-shrink-0">
                folder
              </span>
              <div>
                <>
                  <h3 class="font-medium text-primary-900 group-hover:text-accent-600 transition-colors mb-1">
                    {m.name}
                  </h3>
                  <p class="text-sm text-warmGray">{m.desc}</p>
                </>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">Why Use It?</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          benefits.map((b) => (
            <div class="flex items-center gap-3 p-4 bg-white border border-gray-100">
              <span class="material-symbols-outlined text-green-600">check_circle</span>
              <span class="text-warmGray">{b}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-6">Priority Access</h2>
      <p class="text-primary-300 mb-8">
        Training program students will have early access to FaceOS.
      </p>
      <a
        href="/education"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
        >View Programs</a
      >
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/clinical-technology" class="text-sm text-accent-600">← Clinical Technology</a>
      <a href="/clinical-technology/faceos/spe-m" class="text-sm text-accent-600">SPE-M System →</a>
    </div>
  </section>
</BaseLayout>
