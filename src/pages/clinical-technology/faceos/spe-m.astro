---
import BaseLayout from '@layouts/BaseLayout.astro';

const domains = [
  {
    letter: 'S',
    name: 'Skin',
    desc: 'Quality, elasticity, thickness and sun damage',
    scale: ['Normal', 'Mild alteration', 'Moderate', 'Severe'],
  },
  {
    letter: 'P',
    name: 'Ptosis',
    desc: 'Degree of tissue descent in each facial region',
    scale: ['Absent', 'Mild', 'Moderate', 'Severe'],
  },
  {
    letter: 'E',
    name: 'Structure',
    desc: 'Bone framework and facial projections',
    scale: ['Adequate', 'Mild deficiency', 'Moderate', 'Severe'],
  },
  {
    letter: 'M',
    name: 'Mass',
    desc: 'Soft tissue volume and fat distribution',
    scale: ['Normal', 'Mild excess/deficit', 'Moderate', 'Severe'],
  },
];

const applications = [
  'Standardized initial assessment',
  'Objective communication between professionals',
  'Surgical indication definition',
  'Approach planning',
  'Pre and post-operative comparison',
  'Patient discussion basis',
];
---

<BaseLayout
  title="SPE-M System | Pre-Operative Assessment"
  description="SPE-M: Standardized pre-operative assessment system for facial surgery. Evaluates Skin, Ptosis, Structure and Mass."
  lang="en"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/en" class="hover:text-white">Home</a></li><li><span>/</span></li><li>
            <a href="/clinical-technology" class="hover:text-white">Technology</a>
          </li><li><span>/</span></li><li>
            <a href="/clinical-technology/faceos" class="hover:text-white">FaceOS</a>
          </li><li><span>/</span></li><li class="text-white">SPE-M</li>
        </ol>
      </nav>
      <span
        class="inline-block px-4 py-1 bg-green-600 text-white text-xs uppercase tracking-wider mb-6"
        >Available</span
      >
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">SPE-M System</h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Standardized pre-operative assessment protocol for facial surgery. Four domains, objective
        scale, clear communication.
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">What is SPE-M?</h2>
      <div class="prose prose-lg max-w-none text-warmGray">
        <p class="drop-cap">
          SPE-M is an assessment system developed to standardize pre-operative analysis in facial
          surgery. The acronym represents the four evaluated domains: <strong>S</strong>kin, <strong
            >P</strong
          >tosis, <strong>S</strong>tructure (E) and <strong>M</strong>ass.
        </p>
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">The Four Domains</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          domains.map((d) => (
            <div class="p-6 bg-ivory border border-gray-100">
              <div class="flex items-center gap-4 mb-4">
                <span class="w-12 h-12 bg-accent-600 text-white text-2xl font-serif flex items-center justify-center">
                  {d.letter}
                </span>
                <h3 class="font-serif text-primary-900">{d.name}</h3>
              </div>
              <p class="text-sm text-warmGray mb-4">{d.desc}</p>
              <div class="flex flex-wrap gap-2">
                {d.scale.map((level, i) => (
                  <span
                    class={`text-xs px-2 py-1 ${i === 0 ? 'bg-green-100 text-green-700' : i === 1 ? 'bg-yellow-100 text-yellow-700' : i === 2 ? 'bg-orange-100 text-orange-700' : 'bg-red-100 text-red-700'}`}
                  >
                    {i}: {level}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-8 text-center">Practical Applications</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          applications.map((a) => (
            <div class="flex items-center gap-3 p-4 bg-white border border-gray-100">
              <span class="material-symbols-outlined text-accent-600">check_circle</span>
              <span class="text-warmGray">{a}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-6">Learn the Complete System</h2>
      <p class="text-primary-300 mb-8">
        SPE-M is taught in detail in training programs, with practical cases and guided application.
      </p>
      <a
        href="/education"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
        >View Programs</a
      >
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/clinical-technology/faceos" class="text-sm text-accent-600">← FaceOS</a>
      <a href="/clinical-technology/faceos/vector-planning" class="text-sm text-accent-600"
        >Vector Planning →</a
      >
    </div>
  </section>
</BaseLayout>
