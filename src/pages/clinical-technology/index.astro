---
import BaseLayout from '@layouts/BaseLayout.astro';

const products = [
  {
    title: 'FaceOS',
    subtitle: 'Modern Face Operating System',
    desc: 'Integrated platform for clinical management, assessment and surgical planning',
    href: '/clinical-technology/faceos',
    icon: 'desktop_windows',
    status: 'In Development',
  },
  {
    title: 'SPE-M',
    subtitle: 'Pre-Operative Assessment System',
    desc: 'Standardized protocol for evaluating Skin, Ptosis, Structure and Mass',
    href: '/clinical-technology/faceos/spe-m',
    icon: 'assessment',
    status: 'Available',
  },
  {
    title: 'AI Copilot',
    subtitle: 'Intelligent Assistant',
    desc: 'AI for planning support, documentation and decision making',
    href: '/clinical-technology/ai-copilot',
    icon: 'smart_toy',
    status: 'In Development',
  },
];

const features = [
  {
    icon: 'edit_note',
    title: 'Digital Records',
    desc: 'Structured documentation for facial surgery',
  },
  {
    icon: 'photo_camera',
    title: 'Image Management',
    desc: 'Photo standardization and comparisons',
  },
  { icon: 'analytics', title: 'SPE-M Assessment', desc: 'Automated scoring and recommendations' },
  { icon: 'route', title: 'Vector Planning', desc: 'Visualization and direction definition' },
  { icon: 'checklist', title: 'Surgical Checklists', desc: 'Integrated step-by-step protocols' },
  { icon: 'history', title: 'Structured Follow-up', desc: 'Documented monitoring and evolution' },
];
---

<BaseLayout
  title="Clinical Technology | FaceOS and SPE-M"
  description="Technology for facial surgery: FaceOS, SPE-M Assessment System and AI Copilot for planning."
  lang="en"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">
        Modern Face Institute
      </p>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Clinical Technology
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        Digital tools developed to standardize, document and optimize every stage of facial surgery
      </p>
    </div>
  </section>

  <section class="py-12 bg-accent-600">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <p class="text-xl font-serif text-white italic">
        "Technology should free the surgeon for what really matters: thinking, deciding and
        executing with excellence."
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">Our Solutions</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          products.map((p) => (
            <a
              href={p.href}
              class="group p-6 bg-white border border-gray-100 hover:border-accent-600 transition-all"
            >
              <div class="flex items-start justify-between mb-4">
                <span class="material-symbols-outlined text-accent-600 text-3xl">{p.icon}</span>
                <span
                  class={`text-xs px-2 py-1 ${p.status === 'Available' ? 'bg-green-100 text-green-700' : 'bg-amber-100 text-amber-700'}`}
                >
                  {p.status}
                </span>
              </div>
              <h3 class="font-serif text-xl text-primary-900 group-hover:text-accent-600 transition-colors mb-1">
                {p.title}
              </h3>
              <p class="text-xs text-accent-600 mb-3">{p.subtitle}</p>
              <p class="text-sm text-warmGray">{p.desc}</p>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-serif text-primary-900 mb-12 text-center">Integrated Features</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          features.map((f) => (
            <div class="p-6 bg-ivory border border-gray-100">
              <span class="material-symbols-outlined text-accent-600 text-2xl mb-3 block">
                {f.icon}
              </span>
              <h3 class="font-medium text-primary-900 mb-2">{f.title}</h3>
              <p class="text-sm text-warmGray">{f.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-white mb-8">Our Vision</h2>
      <p class="text-primary-300 leading-relaxed">
        We believe technology should serve the surgeon, not the other way around. Every tool we
        develop stems from a real need observed over nearly 20 years of clinical practice and
        teaching.
      </p>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-primary-900 mb-6">Want Early Access?</h2>
      <p class="text-warmGray mb-8">
        Training program students will have priority access to tools as they are launched.
      </p>
      <a
        href="/education"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
        >View Training Programs</a
      >
    </div>
  </section>
</BaseLayout>
