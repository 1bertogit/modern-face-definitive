---
import BaseLayout from '@layouts/BaseLayout.astro';

const trends = [
  {
    title: 'Modified Faces',
    desc: '90% of faces we operate today have had non-surgical procedures. Anatomy has changed. Techniques need to keep up.',
    impact: 'Techniques adapted for faces with biostimulators and fillers',
  },
  {
    title: 'Less Invasiveness',
    desc: 'Patients seek results with less downtime. The trend is procedures that respect tissues and accelerate recovery.',
    impact: 'Development of approaches that preserve more structures',
  },
  {
    title: 'Natural Results',
    desc: "The 'operated look' is out of fashion. Demand is for rejuvenation that doesn't reveal the surgery.",
    impact: 'Focus on vectors and fixations that respect natural harmony',
  },
  {
    title: 'Integrated Technology',
    desc: 'AI and medical software can assist in planning and documentation, freeing the surgeon for what really matters.',
    impact: 'Development of tools like FaceOS and AI Copilot',
  },
];

const vision = [
  {
    horizon: 'Short Term (1-2 years)',
    objectives: [
      'Consolidate Portuguese training programs',
      'Launch English and Spanish versions',
      'Develop clinical technology (FaceOS)',
      'Expand trained surgeons community',
    ],
  },
  {
    horizon: 'Medium Term (3-5 years)',
    objectives: [
      'Establish presence at international congresses',
      'Scientific publications with documented results',
      'Recognized training certification',
      'Partnerships with educational institutions',
    ],
  },
  {
    horizon: 'Long Term (5+ years)',
    objectives: [
      'Make Modern Face® a global reference',
      'Hands-on training center',
      'Contribution to specialty guidelines',
      'Training new educators',
    ],
  },
];
---

<BaseLayout
  title="Future Vision | Where We're Heading"
  description="Modern Face Institute's strategic vision: facial surgery trends and our role in the specialty's evolution."
  lang="en"
>
  <section class="section-xl bg-primary-900">
    <div class="prose-base text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 label-caption text-primary-400">
          <li><a href="/en" class="hover:text-white">Home</a></li>
          <li><span>/</span></li>
          <li><a href="/about" class="hover:text-white">About</a></li>
          <li><span>/</span></li>
          <li class="text-white">Future Vision</li>
        </ol>
      </nav>
      <p class="label-eyebrow-white">The Path Ahead</p>
      <h1 class="heading-1-white">Future Vision</h1>
      <p class="body-large-light max-w-2xl mx-auto">
        Where facial surgery is heading and our role in this evolution
      </p>
    </div>
  </section>

  <section class="section-lg bg-ivory">
    <div class="prose-wide">
      <h2 class="heading-2 mb-12 text-center">Trends We Observe</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          trends.map((t) => (
            <div class="p-6 bg-white border border-gray-100">
              <h3 class="heading-4 mb-3">{t.title}</h3>
              <p class="body-small mb-4">{t.desc}</p>
              <div class="pt-4 border-t border-gray-100">
                <p class="label-caption text-accent-700">
                  <span class="font-medium">Our response:</span> {t.impact}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="section-lg bg-white">
    <div class="prose-wide">
      <h2 class="heading-2 mb-12 text-center">Our Horizons</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          vision.map((v, i) => (
            <div
              class={`p-6 border ${i === 0 ? 'bg-accent-600 border-accent-600 text-white' : 'bg-ivory border-gray-100'}`}
            >
              <h3 class={`font-serif mb-4 ${i === 0 ? 'text-white' : 'text-primary-900'}`}>
                {v.horizon}
              </h3>
              <ul class="space-y-2">
                {v.objectives.map((o) => (
                  <li
                    class={`flex items-start gap-2 text-sm ${i === 0 ? 'text-white/80' : 'text-warmGray'}`}
                  >
                    <span
                      class={`material-symbols-outlined text-sm flex-shrink-0 ${i === 0 ? 'text-white/60' : 'text-accent-600'}`}
                    >
                      arrow_right
                    </span>
                    {o}
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="section-lg bg-primary-900">
    <div class="prose-narrow text-center">
      <h2 class="heading-2-white mb-8">The Mission That Drives Us</h2>
      <p class="body-base-light mb-8">
        Our goal is not to be the largest facial surgery institute in the world. It's to be the most
        impactful. We want to create a virtuous cycle of knowledge that benefits patients
        everywhere.
      </p>
      <p class="body-large font-serif text-accent-400 italic">
        "A well-trained surgeon impacts thousands of lives. A well-trained educator impacts
        generations."
      </p>
    </div>
  </section>

  <section class="section-lg bg-ivory">
    <div class="prose-narrow text-center">
      <h2 class="heading-2 mb-6">Be Part of This Vision</h2>
      <a
        href="/education"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
        >View Programs</a
      >
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/about/ethical-principles" class="text-sm text-accent-600">← Ethical Principles</a>
      <a href="/about" class="text-sm text-accent-600">About →</a>
    </div>
  </section>
</BaseLayout>
