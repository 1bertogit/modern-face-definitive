---
import BaseLayout from '@layouts/BaseLayout.astro';

const sections = [
  {
    title: 'Dr. Robério Brandão',
    desc: 'Creator of Modern Face® and pioneer in direct vision facial surgery techniques',
    href: '/about/dr-roberio-brandao',
    icon: 'person',
  },
  {
    title: 'Case Studies',
    desc: 'Over 1,500 facial surgeries and 212+ documented Endomidface cases',
    href: '/about/case-studies',
    icon: 'analytics',
  },
  {
    title: 'Timeline',
    desc: 'The evolution of nearly 20 years of dedication to facial surgery',
    href: '/about/timeline',
    icon: 'timeline',
  },
  {
    title: 'Ethical Principles',
    desc: 'The values that guide our practice and teaching',
    href: '/about/ethical-principles',
    icon: 'verified_user',
  },
  {
    title: 'Future Vision',
    desc: 'Where facial surgery is heading and our role in this evolution',
    href: '/about/future-vision',
    icon: 'rocket_launch',
  },
];

const numbers = [
  { value: '1,500+', label: 'Facial surgeries' },
  { value: '212+', label: 'Endomidface cases' },
  { value: '0', label: 'Permanent nerve injuries' },
  { value: '20', label: 'Years of experience' },
];
---

<BaseLayout
  title="About | Modern Face Institute"
  description="Meet Dr. Robério Brandão, creator of Modern Face®, his journey, case studies and the principles that guide the institute."
  lang="en"
>
  <section class="section-xl bg-primary-900">
    <div class="prose-base text-center">
      <p class="label-eyebrow-white">Modern Face Institute</p>
      <h1 class="heading-1-white">About Us</h1>
      <p class="body-large-light max-w-2xl mx-auto">
        Nearly 20 years dedicated to facial surgery, training surgeons and developing techniques
        that prioritize safety, elegance and lasting results.
      </p>
    </div>
  </section>

  <section class="section-sm bg-accent-600">
    <div class="prose-base text-center">
      <p class="body-large font-serif text-white italic">
        "Modern Face is not just a technique. It's a philosophy of respect for anatomy, patient and
        time."
      </p>
      <p class="body-small-light mt-2">— Dr. Robério Brandão</p>
    </div>
  </section>

  <section class="section-md bg-ivory">
    <div class="prose-wide">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {
          numbers.map((n) => (
            <div class="text-center p-6 bg-white border border-gray-100">
              <p class="text-4xl font-serif text-accent-600 mb-2">{n.value}</p>
              <p class="body-small">{n.label}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="section-lg bg-white">
    <div class="prose-wide">
      <h2 class="heading-2 mb-12 text-center">Discover Our Story</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          sections.map((s) => (
            <a
              href={s.href}
              class="group p-6 bg-ivory border border-gray-100 hover:border-accent-600 transition-all"
            >
              <span class="material-symbols-outlined text-accent-600 text-2xl mb-4 block">
                {s.icon}
              </span>
              <h3 class="heading-3 group-hover:text-accent-600 transition-colors mb-2">
                {s.title}
              </h3>
              <p class="body-small">{s.desc}</p>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="section-lg bg-primary-900">
    <div class="prose-narrow text-center">
      <h2 class="heading-2-white mb-8">Our Mission</h2>
      <p class="body-large-light mb-8">
        Training surgeons who don't just execute techniques, but who think, plan and decide based on
        solid principles of anatomy, safety and respect for the patient.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
        <div class="p-6 bg-white/10">
          <h3 class="font-medium text-accent-400 mb-2">Maximum Safety</h3>
          <p class="text-sm text-primary-400">Zero tolerance for permanent injuries</p>
        </div>
        <div class="p-6 bg-white/10">
          <h3 class="font-medium text-accent-400 mb-2">Elegant Results</h3>
          <p class="text-sm text-primary-400">Naturalness and facial harmony</p>
        </div>
        <div class="p-6 bg-white/10">
          <h3 class="font-medium text-accent-400 mb-2">Optimized Recovery</h3>
          <p class="text-sm text-primary-400">Less invasive techniques</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section-lg bg-ivory">
    <div class="prose-narrow text-center">
      <h2 class="heading-2 mb-6">Want to Be Part of It?</h2>
      <p class="body-base mb-8">
        Check out our training programs and join a select group of surgeons who are redefining
        facial surgery.
      </p>
      <a
        href="/education"
        class="inline-block px-8 py-4 bg-accent-600 text-white text-sm uppercase tracking-[0.15em] hover:bg-accent-700 transition-colors"
      >
        View Training Programs
      </a>
    </div>
  </section>
</BaseLayout>
