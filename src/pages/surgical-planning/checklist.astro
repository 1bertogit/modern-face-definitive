---
import BaseLayout from '@layouts/BaseLayout.astro';

const categories = [
  {
    title: 'Documentation',
    items: [
      'Consent form signed',
      'Standardized photos in chart',
      'Recent lab tests',
      'Cardiac evaluation (if indicated)',
      'SPE-M form completed',
    ],
  },
  {
    title: 'Patient',
    items: [
      '8-hour fasting confirmed',
      'Off anticoagulants 7+ days',
      'No smoking 2+ weeks',
      'Companion present',
      'Post-op instructions given',
    ],
  },
  {
    title: 'Room and Team',
    items: [
      'Suture material checked',
      'Hemostasis available',
      'Loupes and lighting tested',
      'Table positioning adequate',
      'Team informed about procedure',
    ],
  },
  {
    title: 'Marking',
    items: [
      'Patient standing for marking',
      'Vectors defined and photographed',
      'Attention areas marked',
      'Symmetry verified',
      'Patient approved markings',
    ],
  },
];
---

<BaseLayout
  title="Pre-Operative Checklist"
  description="Final verification before facial surgery. Documentation, patient, room and markings."
  lang="en"
>
  <section class="py-32 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <nav class="mb-8">
        <ol class="flex items-center justify-center space-x-2 text-sm text-primary-400">
          <li><a href="/en" class="hover:text-white">Home</a></li>
          <li><span>/</span></li>
          <li><a href="/surgical-planning" class="hover:text-white">Planning</a></li>
          <li><span>/</span></li>
          <li class="text-white">Checklist</li>
        </ol>
      </nav>
      <p class="text-[10px] font-medium text-accent-600 uppercase tracking-[0.2em] mb-4">Step 06</p>
      <h1 class="text-4xl md:text-5xl font-serif text-white leading-tight mb-6">
        Pre-Operative Checklist
      </h1>
      <p class="text-xl text-primary-300 leading-relaxed max-w-2xl mx-auto">
        The final check before starting. Checklists reduce errors — not because you don't know, but
        because details escape on busy days.
      </p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          categories.map((cat) => (
            <div class="p-6 bg-ivory border border-gray-100">
              <h2 class="font-serif text-primary-900 text-xl mb-6 pb-4 border-b border-gray-200">
                {cat.title}
              </h2>
              <ul class="space-y-3">
                {cat.items.map((item) => (
                  <li class="flex items-start gap-3">
                    <span class="w-5 h-5 border-2 border-accent-600 flex-shrink-0 mt-0.5" />
                    <span class="text-warmGray">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-ivory">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-serif text-primary-900 mb-6">Why Use a Checklist?</h2>
      <p class="text-warmGray mb-8">
        Aviation dramatically reduced errors with checklists. Medicine is learning. Experienced
        surgeons use checklists not for lack of knowledge, but out of respect for procedure
        complexity.
      </p>
    </div>
  </section>

  <section class="py-8 bg-white border-t">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 flex justify-between">
      <a href="/surgical-planning/consent" class="text-sm text-accent-600">← Consent</a>
      <a href="/surgical-planning" class="text-sm text-accent-600">Planning Index →</a>
    </div>
  </section>
</BaseLayout>
