---
interface Speaker {
  number: number;
  theme: string;
  revealDate: string;
}

const speakers: Speaker[] = [
  { number: 1, theme: 'Primeiros casos de Endomidface', revealDate: '20/01' },
  { number: 2, theme: 'Browlift Evolutivo', revealDate: '25/01' },
  { number: 3, theme: 'Deep Neck Seguro', revealDate: '01/02' },
  { number: 4, theme: 'Casos Combinados', revealDate: '08/02' },
  { number: 5, theme: 'Complicações e Soluções', revealDate: '15/02' },
  { number: 6, theme: 'Seleção de Pacientes', revealDate: '22/02' },
  { number: 7, theme: 'Follow-up de Longo Prazo', revealDate: '01/03' },
  { number: 8, theme: 'Impacto na Clínica', revealDate: '08/03' },
];
---

<div class="grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-6">
  {
    speakers.map((speaker) => (
      <article class="bg-white rounded-lg border border-gray-100 p-4 sm:p-6 text-center hover:shadow-sm transition-shadow duration-300 group">
        {/* Mystery Avatar */}
        <div class="w-16 h-16 sm:w-20 sm:h-20 mx-auto mb-4 bg-primary-900/5 rounded-full flex items-center justify-center group-hover:bg-accent-500/10 transition-colors duration-300">
          <span class="text-3xl sm:text-4xl font-serif text-primary-900/30 group-hover:text-accent-500 transition-colors duration-300">
            ?
          </span>
        </div>

        {/* Speaker Number */}
        <div class="text-xs font-medium text-accent-600 uppercase tracking-wider mb-2">
          Palestrante #{speaker.number}
        </div>

        {/* Theme */}
        <h3 class="font-serif text-sm sm:text-base text-primary-900 mb-3 line-clamp-2">
          {speaker.theme}
        </h3>

        {/* Reveal Date */}
        <div class="flex items-center justify-center gap-1.5 text-xs text-gray-500">
          <span class="material-symbols-outlined text-sm" aria-hidden="true">
            notifications
          </span>
          {speaker.revealDate}
        </div>
      </article>
    ))
  }
</div>

{/* CTA to follow */}
<div class="mt-8 text-center">
  <p class="text-neutral-graphite text-sm sm:text-base mb-4">
    <span class="material-symbols-outlined text-accent-500 align-middle mr-1" aria-hidden="true"
      >campaign</span
    >
    Siga <strong>@brandaofacialinstitute</strong> para ser avisado de cada revelação
  </p>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
