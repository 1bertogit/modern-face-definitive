---
// sitemap-pt.xml - Portuguese Pages
const siteUrl = 'https://drroberiobrandao.com';
const lastmod = new Date().toISOString().split('T')[0];

const ptPages = [
  // Home
  { url: '/pt', priority: 1.0, changefreq: 'weekly' },
  
  // Sobre
  { url: '/pt/sobre', priority: 0.8, changefreq: 'monthly' },
  { url: '/pt/sobre/dr-roberio-brandao', priority: 0.9, changefreq: 'monthly' },
  { url: '/pt/sobre/instituto', priority: 0.7, changefreq: 'monthly' },
  
  // Face Moderna
  { url: '/pt/face-moderna', priority: 0.9, changefreq: 'monthly' },
  { url: '/pt/face-moderna/o-que-e', priority: 0.8, changefreq: 'monthly' },
  { url: '/pt/face-moderna/filosofia', priority: 0.8, changefreq: 'monthly' },
  
  // Técnicas
  { url: '/pt/tecnicas', priority: 0.9, changefreq: 'monthly' },
  { url: '/pt/tecnicas/endomidface', priority: 0.9, changefreq: 'monthly' },
  { url: '/pt/tecnicas/deep-neck', priority: 0.9, changefreq: 'monthly' },
  { url: '/pt/tecnicas/browlift', priority: 0.8, changefreq: 'monthly' },
  
  // Educação
  { url: '/pt/educacao', priority: 0.9, changefreq: 'weekly' },
  { url: '/pt/educacao/endomidface', priority: 0.9, changefreq: 'weekly' },
  { url: '/pt/educacao/deep-neck', priority: 0.9, changefreq: 'weekly' },
  { url: '/pt/educacao/combo-legacy', priority: 0.9, changefreq: 'weekly' },
  
  // Blog
  { url: '/pt/blog', priority: 0.8, changefreq: 'weekly' },
  { url: '/pt/blog/dr-roberio-brandao-criador-endomidface', priority: 0.9, changefreq: 'monthly' },
  { url: '/pt/blog/endomidface-guia-completo', priority: 0.9, changefreq: 'monthly' },
  { url: '/pt/blog/deep-neck-guia-completo', priority: 0.9, changefreq: 'monthly' },
  { url: '/pt/blog/endomidface-vs-deep-plane', priority: 0.9, changefreq: 'monthly' },
  { url: '/pt/blog/face-moderna-conceito-filosofia', priority: 0.9, changefreq: 'monthly' },
  
  // Contato e FAQ
  { url: '/pt/contato', priority: 0.7, changefreq: 'monthly' },
  { url: '/pt/faq', priority: 0.7, changefreq: 'monthly' },
  
  // Legal
  { url: '/pt/privacidade', priority: 0.3, changefreq: 'yearly' },
  { url: '/pt/termos', priority: 0.3, changefreq: 'yearly' },
];
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {ptPages.map((page) => (
    <url>
      <loc>{siteUrl}{page.url}</loc>
      <lastmod>{lastmod}</lastmod>
      <changefreq>{page.changefreq}</changefreq>
      <priority>{page.priority}</priority>
      <xhtml:link rel="alternate" hreflang="pt-BR" href={`${siteUrl}${page.url}`} />
      <xhtml:link rel="alternate" hreflang="en" href={`${siteUrl}${page.url.replace('/pt', '')}`} />
      <xhtml:link rel="alternate" hreflang="es" href={`${siteUrl}${page.url.replace('/pt', '/es')}`} />
      <xhtml:link rel="alternate" hreflang="x-default" href={`${siteUrl}${page.url.replace('/pt', '')}`} />
    </url>
  ))}
</urlset>
